<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:domain="clr-namespace:Teleopti.Ccc.Domain.InterfaceLegacy.Domain;assembly=Teleopti.Ccc.Domain"
    xmlns:converters="clr-namespace:Teleopti.Ccc.SmartClientPortal.Shell.Win.WpfControls.Converters">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <converters:ColorConverter x:Key="ColorConverter"/>
    <converters:DateTimeConverter x:Key="DateTimeConverter"/>
    <converters:TextConverter x:Key="TextConverter"/>

 

    <!-- ColorResources used for Expander /ExpanderToggleButton -->
    
    <SolidColorBrush x:Key="NormalBorderBrush" Color="Black"/>
    <SolidColorBrush x:Key="LightBrush" Color="Black"/>
    <SolidColorBrush x:Key="NormalBackgroundBrush" Color="White" Opacity="0.7" />
    <LinearGradientBrush x:Key="RibbonBaseBrush" EndPoint="0.447,1.188" StartPoint="0.447,-0.25">
        <GradientStop Color="#FFFFFFFF" Offset="0.092"/>
        <GradientStop Color="#FFDEEBFA" Offset="0.719"/>
        <GradientStop Color="#FFC9D9EE" Offset="0.417"/>
        <GradientStop Color="#FFF8FAFD" Offset="0.882"/>
    </LinearGradientBrush>


    <Style x:Key="LayerExpander" TargetType="{x:Type Expander}">
        <Setter Property="Background" Value="{DynamicResource NormalBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NormalBorderBrush}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Expander}">
                    <Border 
                              
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="0,0,0,0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" x:Name="headerRow"/>
                                <RowDefinition Height="*" x:Name="ContentRow"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Margin="0"
                                    Padding="0"
                                x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                CornerRadius="0">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>



                                    <ToggleButton Panel.ZIndex="1"
                                              Template="{DynamicResource CommonRoundToggleButton}"
                                              IsChecked="{Binding Path=IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" OverridesDefaultStyle="True"
                                              Background="{StaticResource CommonNormalBrush}"
                                              Name="toggleButton"
                                              ToolTip="{Binding Converter={StaticResource TextConverter}, ConverterParameter=WpfControls_LayerExpander_ShowDetails}"/>
                                    <ContentPresenter 
                                               
                                                  Margin="0"
                                                  Grid.ColumnSpan="3" 
                                                  RecognizesAccessKey="True" 
                                                  ContentSource="Header"
                                        />

                                </Grid>
                            </Border>

                            <Border Visibility="Collapsed" 
                                Grid.Row="1" 
                                Margin="0"
                                x:Name="ExpandSite" 
                                BorderThickness="0" >
                              
                                <ContentPresenter 
                                    
                                              Name="mainContent"
                                              Opacity="1"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              Margin="0"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                              Focusable="false"/>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" 
                                 Value="True">
                            <Setter Property="Visibility" 
                                    Value="Visible" 
                                    TargetName="ExpandSite"/>
                          
                            <Setter TargetName="toggleButton"
                                    Property="ToolTip"
                                    Value="{Binding Converter={StaticResource TextConverter}, ConverterParameter=WpfControls_LayerExpander_HideDetails}"/>
                          </Trigger>

                       
                       
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    

    <Style TargetType="Border" x:Key="CommonBorderStyle">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource NormalBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NormalBorderBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    <Style TargetType="Border" x:Key="CommonRoundBorderStyle">
        <Setter Property="BorderBrush" Value="{StaticResource CommonLightBrush}" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderThickness" Value="15"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
