<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Teleopti.Wfm.Adherence"
				   namespace="Teleopti.Wfm.Adherence.Configuration"
				   default-access="field.camelcase-underscore">

	<class name="RtaMap">
		<id name="Id" access="nosetter.camelcase-underscore" unsaved-value="null">
			<generator class="guid.comb"/>
		</id>
		<version name="Version" unsaved-value="null"/>
		<property name="Activity" access="property"/>
		<many-to-one name="StateGroup" class="Teleopti.Wfm.Adherence.Configuration.RtaStateGroup"/>
		<many-to-one name="RtaRule" class="Teleopti.Wfm.Adherence.Configuration.RtaRule"/>
		<property name="BusinessUnit"/>
		<filter name="businessUnitFilter" condition=":businessUnitParameter = BusinessUnit"/>
	</class>
</hibernate-mapping>
