<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Teleopti.Wfm.Adherence"
				   namespace="Teleopti.Wfm.Adherence.Configuration"
				   default-access="field.camelcase-underscore">

	<class name="RtaRule">
		<id name="Id" access="nosetter.camelcase-underscore" unsaved-value="null">
			<generator class="guid.comb"/>
		</id>
		<version name="Version" unsaved-value="null"/>
		<component name="Description">
			<property name="Name"/>
			<property name="ShortName"/>
		</component>
		<property name="DisplayColor" type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.ColorNumber, Teleopti.Ccc.Infrastructure"/>
		<property name="ThresholdTime"/>
		<property name="StaffingEffect"/>
		<property name="Adherence"/>
		<property name="IsAlarm"/>
		<property name="AlarmColor" type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.ColorNumber, Teleopti.Ccc.Infrastructure"/>
		<property name="BusinessUnit" access="property"/>
		<filter name="businessUnitFilter" condition=":businessUnitParameter = BusinessUnit"/>
	</class>
</hibernate-mapping>
