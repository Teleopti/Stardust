<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Teleopti.Wfm.Adherence"
				   namespace="Teleopti.Ccc.Domain.RealTimeAdherence.Domain.Configuration"
				   default-access="field.camelcase-underscore">

	<class name="RtaMap">
		<id name="Id" access="nosetter.camelcase-underscore" unsaved-value="null">
			<generator class="guid.comb"/>
		</id>
		<version name="Version" unsaved-value="null"/>
		<many-to-one name="UpdatedBy" class="Teleopti.Ccc.Domain.Common.Person"/>
		<property name="UpdatedOn" type="UtcDateTime"/>
		<many-to-one name="Activity" class="Teleopti.Ccc.Domain.Scheduling.Activity"/>
		<many-to-one name="StateGroup" class="Teleopti.Ccc.Domain.RealTimeAdherence.Domain.Configuration.RtaStateGroup"/>
		<many-to-one name="RtaRule" class="Teleopti.Ccc.Domain.RealTimeAdherence.Domain.Configuration.RtaRule"/>
		<many-to-one name="BusinessUnit" class="Teleopti.Ccc.Domain.Common.BusinessUnit" access="nosetter.camelcase-underscore"/>
		<filter name="businessUnitFilter" condition=":businessUnitParameter = BusinessUnit"/>
	</class>
</hibernate-mapping>
