<?xml version="1.0" encoding="UTF-8"?>

<Project DefaultTargets="DeleteFiles" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="12.0">
	<Target Name="DeleteFiles">
		<ItemGroup>
			<XmlFiles Include="$(WorkingDirectory)\**\bin\**\*.xml" 
					Exclude="$(WorkingDirectory)\**\*Test\**\*.xml;$(WorkingDirectory)\**\config.xml;$(WorkingDirectory)\**\BuildArtifacts\**\*.*"/>
		</ItemGroup>
		<Delete Files="@(XmlFiles)" />
	</Target>	
</Project>