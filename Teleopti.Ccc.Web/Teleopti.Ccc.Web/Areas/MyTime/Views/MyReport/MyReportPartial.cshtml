@using Teleopti.Ccc.UserTexts
@{
	Layout = null;
}



<h2>MyReportPartial</h2>
<div class="navbar ">
    <div class="navbar-inner">
        <form class="navbar-form pull-left">
            <div class="input-append input-prepend">
                <button class="btn" data-bind="click: Teleopti.MyTimeWeb.MyReport.previousDay"><i class="icon-arrow-left"></i></button>
                <input data-bind="value: DisplayDate" type="text" class="span3 text-center" readonly="readonly"/>
                <button class="btn moment-datepicker"><i class="icon-th" ></i></button>
                <button class="btn" data-bind="click: Teleopti.MyTimeWeb.MyReport.nextDay"><i class="icon-arrow-right"></i></button>
            </div>
        </form>
        <ul class="nav">
            <li><a class="yesterday" data-bind="click: Teleopti.MyTimeWeb.MyReport.yesterday">@Resources.Yesterday</a></li>
        </ul>
    </div>
</div>
<div class="container-fluid">

	<div class="myReportFigures">
		<div class="myReportTable">
			<div class="myReportHeader myReportTableRow"><div class="myReportText">@Resources.Metric</div><div class="myReportValues">@Resources.Value</div></div>
			<div class="myReportTableRow"><div class="myReportText">@Resources.Adherence</div><div class="myReportValues" data-bind="text: Adherence()"></div></div>
			<div class="myReportTableRow" style="background: #f0f0ff"><div class="myReportText">@Resources.Readiness</div><div class="myReportValues" data-bind="text: Readiness()"></div></div>
			<div class="myReportTableRow"><div class="myReportText">@Resources.AverageHandlingTime</div><div class="myReportValues" data-bind="text: AverageHandlingTime()"></div></div>
			<div class="myReportTableRow" style="background: #f0f0ff"><div class="myReportText">@Resources.AverageTalkTime</div><div class="myReportValues" data-bind="text: AverageTalkTime()"></div></div>
			<div class="myReportTableRow"><div class="myReportText">@Resources.AverageAfterCallWork</div><div class="myReportValues" data-bind="text: AverageAfterWork()"></div></div>
			<div class="myReportTableRow" style="background: #f0f0ff"><div class="myReportText">@Resources.AnsweredCalls</div><div class="myReportValues" data-bind="text: AnsweredCalls()"></div></div>

		</div>
			
	</div>
	<div class="myReportChart" id="chart_div" style="font-size: 40px;white-space: pre; border: 1px black solid; height: 200px; line-height: 40px;padding: 20px">diagram (visa inte nu)
	</div>
</div>


<script type="text/javascript">
	Teleopti.MyTimeWeb.MyReport.Init();

</script>

			