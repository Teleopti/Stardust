@using Teleopti.Ccc.UserTexts
@{
	Layout = null;
}



<h2>MyReportPartial</h2>
<div class="navbar ">
    <div class="navbar-inner">
        <form class="navbar-form pull-left">
            <div class="input-append input-prepend">
                <button class="btn" data-bind="click: Teleopti.MyTimeWeb.MyReport.previousDay"><i class="icon-arrow-left"></i></button>
                <input data-bind="value: DisplayDate" type="text" class="span3 text-center" readonly="readonly"/>
                <button class="btn moment-datepicker"><i class="icon-th" ></i></button>
                <button class="btn" data-bind="click: Teleopti.MyTimeWeb.MyReport.nextDay"><i class="icon-arrow-right"></i></button>
            </div>
        </form>
        <ul class="nav">
            <li><a class="yesterday" data-bind="click: Teleopti.MyTimeWeb.MyReport.yesterday">@Resources.Yesterday</a></li>
        </ul>
    </div>
</div>
<div class="container-fluid">

	<div class="myReportFigures">
		<div class="myReportTable">
			<div class="myReportHeader myReportTableRow"><div class="myReportHeaderText">@Resources.Metric</div><div class="myReportValues">@Resources.Value</div></div>
			<div class="myReportTableRow"><div data-bind="click: function (data, event) { Teleopti.MyTimeWeb.MyReport.drawChart(AdherenceValues, AdherenceText, data, event) }" class="myReportText">@Resources.Adherence</div><div class="myReportValues" data-bind="	text: Adherence()"></div></div>
			<div class="myReportTableRow" style="background: #f0f0ff"><div data-bind="click: function (data, event) { Teleopti.MyTimeWeb.MyReport.drawChart(ReadinessValues, ReadinessText, data, event) }" class="myReportText">@Resources.Readiness</div><div class="myReportValues" data-bind="	text: Readiness()"></div></div>
			<div class="myReportTableRow"><div data-bind="click: function (data, event) { Teleopti.MyTimeWeb.MyReport.drawChart(HandlingTimeValues, AverageHandlingTimeText, data, event) }" class="myReportText">@Resources.AverageHandlingTime</div><div class="myReportValues" data-bind="	text: AverageHandlingTime()"></div></div>
			<div class="myReportTableRow" style="background: #f0f0ff"><div data-bind="click: function (data, event) { Teleopti.MyTimeWeb.MyReport.drawChart(TalkTimeValues, AverageTalkTimeText, data, event) }" class="myReportText">@Resources.AverageTalkTime</div><div class="myReportValues" data-bind="	text: AverageTalkTime()"></div></div>
			<div class="myReportTableRow"><div data-bind="click: function (data, event) { Teleopti.MyTimeWeb.MyReport.drawChart(AfterTalkTimeValues, AverageAfterWorkText, data, event) }" class="myReportText">@Resources.AverageAfterCallWork</div><div class="myReportValues" data-bind="	text: AverageAfterWork()"></div></div>
			<div class="myReportTableRow" style="background: #f0f0ff"><div data-bind="click: function (data, event) { Teleopti.MyTimeWeb.MyReport.drawChart(AnsweredValues, AnsweredCallsText, data, event) }" class="myReportText">@Resources.AnsweredCalls</div><div class="myReportValues" data-bind="	text: AnsweredCalls()"></div></div>

		</div>
			
	</div>
	<div class="myReportChart" id="chart_div" style="height: 300px;">
	</div>
</div>

<script type="text/javascript">
	Teleopti.MyTimeWeb.MyReport.Init();
</script>

			