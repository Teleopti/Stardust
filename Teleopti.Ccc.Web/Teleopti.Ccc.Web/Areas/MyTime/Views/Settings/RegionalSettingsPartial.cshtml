@using Teleopti.Ccc.UserTexts
@using Teleopti.Ccc.Web.Areas.MyTime.Models.Settings
@model SettingsViewModel
@{
	 Layout = null;
}


<div id ="selectors" class="ui-corner-all">
	<p style="height: 70px">
		@Resources.CultureText<br/>
		@Html.DropDownListFor(x => x.ChoosenCulture.LCID, new SelectList(Model.Cultures, "LCID", "DisplayName"), new { @id = "cultureSelect" })
		<label id="cultureSaved" class="displaynone">@Resources.UpdatedExMark</label>
	</p>
	<p style="height: 50px">
		@Resources.Language<br/>
		@Html.DropDownListFor(x => x.ChoosenUiCulture.LCID, new SelectList(Model.Cultures, "LCID", "DisplayName"), new { @id = "cultureUiSelect" })
		<label id="cultureUiSaved" class="displaynone">@Resources.UpdatedExMark</label>
	</p>
</div>
