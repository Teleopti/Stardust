@using Teleopti.Ccc.UserTexts

<table class="table-condensed">
	<tr>
		<td>
			<label>
				@Resources.AbsenceType
			</label>
			<div>
				<select class="request-edit-absence form-control" data-bind="value: AbsenceId">
					@foreach (var absenceType in Model.AbsenceTypesForReport)
					{
						<option value="@Html.AttributeEncode(absenceType.Id)">@absenceType.Name</option>
					}
				</select>
			</div>
		</td>

	</tr>
	<tr>
		<td>
			<table class="table-condensed">
				<tr class="form-inline">
					<td>
						<span class="input-group">
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-step-backward"></i>
							</span>
							<![if (!IE)|(gt IE 8)]>
								<input class="absence-report-start-date form-control" data-bind="datepicker: DateFrom, datepickerOptions: { autoHide: true, format: DateFormat() }" type="text" disabled="disabled" />
							<![endif]>
							<!--[if lte IE 8]>
								<input class="absence-report-start-date input-sm form-control" readonly="readonly" data-bind="value: DateFrom().format(DateFormat())" type="text" />
							<![endif]-->
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-calendar"></i>
							</span>
						</span>
					</td>
