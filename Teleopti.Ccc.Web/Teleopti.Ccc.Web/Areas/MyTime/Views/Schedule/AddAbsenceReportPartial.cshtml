						<div class="bootstrap-timepicker">
							<div class="input-group" title="@Resources.EndTime">
								<input type="text" class="absence-report-end-time form-control" data-bind="timepicker: EndTime, timepickerOptions: { showMeridian: ShowMeridian, allowEmpty: false }" />
