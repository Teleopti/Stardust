					<td>
						<label>
							@Resources.AbsenceType
						</label>
					</td>
					<td>
						<div>
							<select class="request-edit-absence form-control" data-bind="value: AbsenceId">
								@foreach (var absenceType in Model.AbsenceTypesForReport)
