@using Teleopti.Ccc.UserTexts


<div class="probability-radios-group"> 
	<label class="radio pointer" data-bind="click:function(d,e){onOptionSelected(noneOption());}">
		<input type="radio"  name="probabilityRadios" aria-label="@Resources.HideStaffingInfo" data-bind="value: noneOption, checked: checkedProbability" />
		<span>@Resources.HideStaffingInfo</span>
	</label>
	<!-- ko if: absenceProbabilityEnabled() -->
	<label class="radio pointer" data-bind="click:function(d,e){onOptionSelected(absenceOption());}">
		<input type="radio" name="probabilityRadios" aria-label="@Resources.ShowAbsenceProbability" data-bind="value: absenceOption, checked: checkedProbability"/>
		<span>@Resources.ShowAbsenceProbability</span>
		<span class="absence-probability-label"></span>
	</label>
	<!-- /ko -->

	<!-- ko if: overtimeProbabilityEnabled() -->
	<label class="radio pointer" data-bind="click:function(d,e){onOptionSelected(overtimeOption());}">
		<input type="radio" name="probabilityRadios" aria-label="@Resources.ShowOvertimeProbability"  data-bind="value: overtimeOption, checked: checkedProbability" />
		<span>@Resources.ShowOvertimeProbability</span>
		<span class="overtime-probability-label"></span>
	</label>
	<!-- /ko -->
</div>
