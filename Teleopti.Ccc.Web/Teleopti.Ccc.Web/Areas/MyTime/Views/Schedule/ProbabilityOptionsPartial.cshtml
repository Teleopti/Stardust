@using Teleopti.Ccc.UserTexts

<!-- ko if: $parents[1].showProbabilityOptions() -->
<div class="probability-radios-group"> 
	<label class="radio">
		<input type="radio" name="probabilityRadios" value="0" aria-label="@Resources.HideStaffingProbability" data-bind="checked: checkedProbability, click:function(d,e){$parent.OnProbabilityOptionSelectCallback(d.checkedProbability()); return true;}" />
		<span>@Resources.HideStaffingProbability</span>
	</label>
	<label class="radio">
		<input type="radio" name="probabilityRadios" value="1" aria-label="@Resources.ShowAbsenceProbability" data-bind="checked: checkedProbability, click:function(d,e){$parent.OnProbabilityOptionSelectCallback(d.checkedProbability()); return true;}" />
		<span>@Resources.ShowAbsenceProbability</span>
	</label>
	<label class="radio">
		<input type="radio" name="probabilityRadios" value="2" aria-label="@Resources.ShowOvertimeProbability"  data-bind="checked: checkedProbability, click:function(d,e){$parent.OnProbabilityOptionSelectCallback(d.checkedProbability()); return true;}" />
		<span>@Resources.ShowOvertimeProbability</span>
	</label>
</div>
<!-- /ko -->