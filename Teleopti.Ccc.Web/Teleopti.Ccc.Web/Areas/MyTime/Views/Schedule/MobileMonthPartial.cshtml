@using Teleopti.Ccc.UserTexts
@{
Layout = null;
}
<div class="mobile-month-view">
	<div class="navbar navbar-teleopti subnavbar">
		<div class="container mobile-month-view-nav">
			<ul class="nav navbar-nav navbar-teleopti row submenu">
				<li class="mobile-datepicker">
					<span class="input-group">
						<span class="input-group-btn">
							<button class="btn btn-default" type="button" data-bind="click: previousMonth">
								<i class="glyphicon glyphicon-chevron-left"></i>
							</button>
						</span>
						<input id="CurrentMonth" class="form-control text-center" type="text" data-bind="value: formattedSelectedDate" value="" readonly="readonly" />
						<span class="input-group-btn">
							<button class="btn btn-default" type="button" data-bind="datepicker: selectedDate, datepickerOptions: { autoHide: true, viewMode: 1, minViewMode: 1 }">
								<i class="glyphicon glyphicon-calendar"></i>
							</button>
							<button class="btn btn-default" type="button" data-bind="click: nextMonth">
								<i class="glyphicon glyphicon-chevron-right"></i>
							</button>
						</span>
					</span>
				</li>
				<li>
					<a href="#Schedule/MobileDay">
						<i class="glyphicon glyphicon-home"></i>
					</a>
				</li>
				<li>
					<a href="#MessageTab">
						<i class="glyphicon glyphicon-envelope"></i>
						<span id="MobileDayView-message" class="badge" data-bind="visible: unreadMessageCount > 0, text: unreadMessageCount">
						</span>
					</a>
				</li>
				<li>
					<a href="#Requests/Index">
						<i class="glyphicon glyphicon-comment"></i>
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>