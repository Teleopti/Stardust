@using Teleopti.Ccc.UserTexts

<div class="shift-exchange-missing-wcs-message alert alert-warning" data-bind="visible: missingWorkflowControlSet">
	@Resources.MissingWorkflowControlSet
</div>
<div data-bind="if: !missingWorkflowControlSet()">
	<table class="table-condensed">
		<tr>
			<td>
				<label>@Resources.AnnounceShiftConditions</label>
			</td>
		</tr>
		<tr>
			<td>
				<div class="col-md-3 col-xs-12 annouonce-shift-matching-date" >
					<div class="input-group">
						<input class="form-control" data-bind="datepicker: DateToForPublish, datepickerOptions: {autoHide: true, format: DateFormat() }" />
						<span class="input-group-addon" data-bind="datepicker: DateToForPublish, datepickerOptions: {autoHide: true, format: DateFormat() }">
							<i class="glyphicon glyphicon-calendar"></i>
						</span>
					</div>
				</div>
				
				<div class="col-md-3 col-xs-12 annouonce-shift-matching-date">
					<div class="bootstrap-timepicker">
						<div class="input-group" title="@Resources.StartTime">
							<input type="text" class="shift-exchange-offer-start-time form-control" data-bind="timepicker: StartTime, timepickerOptions: { showMeridian: ShowMeridian, allowEmpty: false }" />
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-time"></i>
							</span>
						</div>
					</div>
				</div>

				<div class="col-md-3 col-xs-12 annouonce-shift-matching-date">
					<div class="bootstrap-timepicker">
						<div class="input-group" title="@Resources.EndTime">
							<input type="text" class="shift-exchange-offer-end-time form-control" data-bind="timepicker: EndTime, timepickerOptions: { showMeridian: ShowMeridian, allowEmpty: false }" />
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-time"></i>
							</span>
						</div>
					</div>
				</div>

				<div class="col-md-3 col-xs-12 annouonce-shift-next-date">
					<input type="checkbox" class="shift-exchange-offer-next-day" data-bind="checked: EndTimeNextDay" /> @Resources.NextDay
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<label>@Resources.ShiftExchangeOfferValidTo</label>
			</td>
		</tr>
		<tr>
			<td>
				<div class="col-md-3 col-xs-12">
					<div class="input-group">
						<input id="validto-datepicker" class="shift-exchange-offer-end-date form-control" data-bind="datepicker: OfferValidTo, datepickerOptions: {autoHide: true, format: DateFormat() }" />
						<span class="input-group-addon" data-bind="datepicker: OfferValidTo, datepickerOptions: {autoHide: true, format: DateFormat() }">
							<i class="glyphicon glyphicon-calendar"></i>
						</span>
					</div>
				</div>
			</td>
		</tr>
	</table>
	<div data-bind="if: ShowError">
		<div class="shift-exchange-offer-error alert alert-danger" data-bind="html: ErrorMessage" />
	</div>
	<div class="pull-right">
		<button class="request-new-cancel btn" data-bind="click: $parent.CancelAddingNewRequest">@Resources.Cancel</button>
		<button class="request-new-send btn btn-primary" data-bind="click: SaveShiftExchangeOffer, enable: SaveEnabled">@Resources.Save</button>
	</div>
	<div class="pull-left shift-exchange-out-of-open-period alert alert-danger" data-bind="visible: !SaveEnabled()">
		<div data-bind="visible: !IsSelectedDateInShiftTradePeriod()">@Resources.AnnounceShiftDateOutPeriod</div>
		<div data-bind="visible: !IsValidToLegal()">@Resources.AnnounceShiftValidToNotLegal</div>
		<div data-bind="visible: !IsTimeLegal()">@Resources.EndTimeMustBeGreaterOrEqualToStartTime</div>
		<div data-bind="visible: !IsNotAbsence()">@Resources.PublishAnnouncementNoAbsence</div>
	</div>
</div>

