@{
	Layout = null;
}

   <div class="container-fluid">
        <div class="navbar">
            <div class="navbar-inner">
                <form class="navbar-form pull-left">
                    <div class="input-append input-prepend">
                        <button class="btn done"><i class="icon-arrow-left"></i></button>
                        <input type="text" value="January, 2014" readonly="readonly" class="span3 text-center">
                        <button class="btn moment-datepicker"><i class="icon-th"></i></button>
                        <button class="btn done"><i class="icon-arrow-right"></i></button>
                    </div>
                </form>
                <ul class="nav">
                    <li><a class="week-schedule-today" href="#">Today</a></li>
                </ul>
            </div>
        </div>

        <div id="calendar" class="cal-context" style="width: 100%;">
            <div class="cal-row-fluid cal-row-head visible-desktop">
                <div class="cal-cell">Monday</div>
                <div class="cal-cell">Tuesday</div>
                <div class="cal-cell">Wednesday</div>
                <div class="cal-cell">Thursday</div>
                <div class="cal-cell">Friday</div>
                <div class="cal-cell">Saturday</div>
                <div class="cal-cell">Sunday</div>
            </div>

            <div class="cal-row-fluid cal-row-head hidden-desktop">
                <div class="cal-cell">Mon</div>
                <div class="cal-cell">Tue</div>
                <div class="cal-cell">Wed</div>
                <div class="cal-cell">Thu</div>
                <div class="cal-cell">Fri</div>
                <div class="cal-cell">Sat</div>
                <div class="cal-cell">Sun</div>
            </div>

            <div class="cal-month-box" data-bind="foreach: weekViewModels">
                <div class="cal-row-fluid" data-bind="foreach: dayViewModels">
                    <div class="cal-cell">
                        <div class="cal-month-day" data-bind="css: {'cal-day-outmonth': isOutsideMonth}">
                            <span data-bind="text: dayOfMonth, attr:{'data-cal-date': date}" class="pull-right label label-inverse"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>