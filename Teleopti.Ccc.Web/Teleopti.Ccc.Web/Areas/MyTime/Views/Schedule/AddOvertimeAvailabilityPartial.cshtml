@using Teleopti.Ccc.UserTexts

<table class="table-condensed">
	<tr>
		<td>
			<table class="table-condensed">
				<tr class="form-inline">
					<td>
						<i class="glyphicon glyphicon-step-backward"></i>
					</td>
					<td>
						<div class="input-group">
							<input class="overtime-availability-start-date" data-bind="datepicker: DateFrom, datepickerOptions: { autoHide: true, format: DateFormat() }" type="text" disabled="disabled" />
							<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
						</div>
					</td>
					<td>
						<div class="input-group bootstrap-timepicker" title="@Resources.StartTime">
							<input type="text" class="overtime-availability-start-time input-sm" data-bind="timepicker: StartTime, timepickerOptions: { showMeridian: ShowMeridian, allowEmpty: false }" />
							<span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
						</div>
					</td>
				</tr>
				<tr class="form-inline">
					<td>
						<i class="glyphicon glyphicon-step-forward"></i>
					</td>
					<td>
						<div class="input-group">
							<input class="overtime-availability-end-date" data-bind="datepicker: DateToForDisplay(), datepickerOptions: { autoHide: true, format: DateFormat() }" type="text" disabled="disabled" />
							<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
						</div>
					</td>
					<td>
						<div class="input-group bootstrap-timepicker" title="@Resources.EndTime">
							<input type="text" class="overtime-availability-end-time input-sm" data-bind="timepicker: EndTime, timepickerOptions: { showMeridian: ShowMeridian, allowEmpty: false }" />
							<span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
						</div>
						<input type="checkbox" class="overtime-availability-next-day" data-bind="checked: EndTimeNextDay" title="@Resources.NextDay" />
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>
<div data-bind="if: ShowError">
	<div class="overtime-availability-error alert alert-danger" data-bind="html: ErrorMessage" />   
</div>
<div class="pull-right">
	<button class="request-new-cancel btn" data-bind="click: $parent.CancelAddingNewRequest">@Resources.Cancel</button>
	<button class="request-new-delete btn btn-danger" data-bind="click: DeleteOvertimeAvailability, visible: HasOvertimeAvailability()">@Resources.Delete</button>
	<button class="request-new-send btn btn-primary" data-bind="click: SetOvertimeAvailability">@Resources.Save</button>
</div>