@model Teleopti.Ccc.Web.Areas.MyTime.Models.AppGuide.WFMAppGuideViewModel

<div class="container guide-container well well-sm">
	<div class="row">
		<div class="col-lg-12">
			<h4><b>@Resources.WFMAppGuideTitle</b></h4>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<b>@Resources.WFMAppGuideStep1</b>
			@Resources.WFMAppGuideStep1Description

		</div>
	</div>
	<div class="row">
		<div class="col-lg-3 col-lg-offset-1 img-row">
			<a data-bind="attr:{href: iOSAppLink()}" target="_blank">
				<img class="img-responsive" src="~/Areas/MyTime/Content/Images/download-on-the-app-store.png" />
			</a>
			<a data-bind="attr:{href: androidAppLink()}" target="_blank">
				<img class="img-responsive" src="~/Areas/MyTime/Content/Images/google-play-badge.png" />
			</a>
		</div>
		<div class="col-lg-3 img-row">
			<span href="javascript:;" data-bind="html: appQRCode()">
			</span>

		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<b>@Resources.WFMAppGuideStep2</b>
			@Resources.WFMAppGuideStep2Description<a href="javascript:;"><i data-bind="text: myTimeWebBaseUrl()"></i></a>.
		</div>
	</div>
	<div class="row">
		<div class="col-lg-11 col-lg-offset-1" data-bind="html: myTimeQRCode()">
		</div>
	</div>

	<div id="customUrlForMyTime" class="hidden">@Model.UrlForMyTimeWeb</div>
</div>
