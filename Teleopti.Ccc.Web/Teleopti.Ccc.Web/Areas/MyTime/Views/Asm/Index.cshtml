@using Teleopti.Ccc.Web.Areas.MyTime.Models.Asm
@model AsmViewModel
@{
	const double pixelsPerMinute = 0.3;
}
<style>
	.asm-timeline-border
	{
		border: solid green;
		top: 100px;
		position: relative;
		height: 50px; /*overflow: hidden;*/
	}
	
	.asm-timeline
	{
		left: 100px;
		border: solid red;
		position: relative;
		width: 1000px;
		height: 40px;
	}
	
	.asm-layer
	{
		position: absolute;
		height: 50px;
	}
	
	.asm-layer-extender
	{
		padding-left: 100px;
	}
	
	.asm-now-marker
	{
		background-color: black;
		opacity: 0.5;
		width: 120px;
		position: absolute;
		height: 100%;
	}
	
</style>
@(Model.Layers.Count)
@(Model.StartDate)
<div class="asm-timeline-border">
	<div class="asm-now-marker">
	</div>
	<div class="asm-timeline">
		@foreach (var layer in Model.Layers)
  {
			<span class="asm-layer" style="
			left:@(layer.RelativeStartInMinutes * pixelsPerMinute)px;
			padding-left:@(layer.LengthInMinutes * pixelsPerMinute)px;
			background-color: @(layer.Color)"/>
  }
		@for (var day = 0; day <= 2; day++)
  {
	  for (var hour = 1; hour <= 24; hour++)
	  {
@*span style="left:@(pixelsPerMinute*day*24*60 + pixelsPerMinute*hour*60)px;
	border-left: 1px solid rgba(0, 0, 0, 0.15);">@(hour)</span>*@
	  }
  }
	</div>
</div>
