}
<style>
	div.asm-layer
	{
		height: 50px;
	}
</style>
<div style="position: absolute">
	​
	@foreach (var layer in Model.Layers)
 {
		<div class="absolute asm-layer" style=" 
										left:@(layer.RelativeStartInMinutes)px;
