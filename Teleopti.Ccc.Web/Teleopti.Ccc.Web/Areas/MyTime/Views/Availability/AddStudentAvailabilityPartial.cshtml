@using Teleopti.Ccc.UserTexts
<div data-bind="if: ShowError">
	<div class="availability-error-panel alert alert-danger" data-bind="html: ValidationError" />
</div>
<div data-bind="visible: IsAvailabilityInputVisible">
	<div class="student-availability-time-input" data-bind="if: IsTimeInputVisible">
		<div class="bootstrap-timepicker">
			<div class="input-group" title="@Resources.StartTime">
				<span class="input-group-addon">
					<i class="glyphicon glyphicon-step-backward"></i>
				</span>
				<input type="text" class="availability-start-time form-control right-align" data-bind="timepicker: StartTime, timepickerOptions: { showMeridian: ShowMeridian(), allowEmpty: true, showInputs: false}" />
				<div class="input-group-addon">
					<i class="glyphicon glyphicon-time"></i>
				</div>
			</div>
		</div>
		<div class="bootstrap-timepicker">
			<div class="input-group" title="@Resources.EndTime">
				<span class="input-group-addon">
					<i class="glyphicon glyphicon-step-forward"></i>
				</span>
				<input type="text" class="availability-end-time form-control right-align" data-bind="timepicker: EndTime, timepickerOptions: { showMeridian: ShowMeridian(), allowEmpty: true, showInputs: false}" />
				<div class="input-group-addon">
					<i class="glyphicon glyphicon-time"></i>
				</div>
			</div>
		</div>
		<span>
			<input type="checkbox" id="Student-availability-end-time-next-day" class="availability-next-day" data-bind="checked: NextDay" title="@Resources.NextDay" />
			<span>@Resources.NextDay</span>
		</span>
	</div>
</div>
<div class="pull-right">
	<button id="Student-availability-reset" class="btn" data-bind="click: reset">@Resources.Reset</button>
	<button id="Student-availability-apply" class="btn btn-primary" data-bind="click: Teleopti.MyTimeWeb.StudentAvailability.SetStudentAvailability"
			data-DateErrorMessage="@Resources.PleaseChooseADate"
			data-StartTimeErrorMessage="@Resources.PleaseInputStartTime" 
			data-EndTimeErrorMessage="@Resources.PleaseInputEndTime">@Resources.Apply</button>
</div>
