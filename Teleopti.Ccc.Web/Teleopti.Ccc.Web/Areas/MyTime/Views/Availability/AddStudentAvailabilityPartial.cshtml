@using Teleopti.Ccc.UserTexts
<div data-bind="if: ShowError">
    <div class="availability-error-panel alert alert-danger" data-bind="html: ValidationError" />   
</div>
<table class="table-condensed" data-bind="visible: IsAvailabilityInputVisible">
    <tr>
        <td>
            <table class="table-condensed">
                <tr class="form-inline" data-bind="if: IsTimeInputVisible">
                    <td>
                        <div class="bootstrap-timepicker">
                            <div class="input-group" title="@Resources.StartTime">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-step-backward"></i>
                                </span>
                                <input type="text" class="availability-start-time form-control" data-bind="timepicker: StartTime, timepickerOptions: { showMeridian: ShowMeridian(), allowEmpty: true }" />
								<span class="input-group-btn">
									<button class="btn btn-default" data-bind="timepicker: StartTime, timepickerOptions: { showMeridian: ShowMeridian }">
										<i class="glyphicon glyphicon-time"></i>
									</button>
								</span>
                            </div>
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr class="form-inline" data-bind="if: IsTimeInputVisible">
                    <td>
                        <div class="bootstrap-timepicker">
                            <div class="input-group" title="@Resources.EndTime">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-step-forward"></i>
                                </span>
                                <input type="text" class="availability-end-time form-control" data-bind="timepicker: EndTime, timepickerOptions: { showMeridian: ShowMeridian(), allowEmpty: true }" />
								<span class="input-group-btn">
									<button class="btn btn-default" data-bind="timepicker: EndTime, timepickerOptions: { showMeridian: ShowMeridian }">
										<i class="glyphicon glyphicon-time"></i>
									</button>
								</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <input type="checkbox" id="Student-availability-end-time-next-day" class="availability-next-day" data-bind="checked: NextDay" title="@Resources.NextDay" />
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<div class="pull-right">
    <button id="Student-availability-reset" class="btn btn-default" data-bind="click: reset">@Resources.Reset</button>
	<button id="Student-availability-apply" class="btn btn-primary" data-bind="enable: EnableApply, click: Teleopti.MyTimeWeb.StudentAvailability.SetStudentAvailability">@Resources.Apply</button>
</div>
