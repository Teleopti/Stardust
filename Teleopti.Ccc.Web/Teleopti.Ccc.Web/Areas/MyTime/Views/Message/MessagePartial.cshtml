@using System.Web.UI.WebControls
@using Teleopti.Ccc.UserTexts
@using Teleopti.Ccc.Web.Areas.MyTime.Models.Message
@using Teleopti.Interfaces.Domain
@model MessageViewModel
@{
	Layout = null;
}
<div class="displaynone" id="Communication-detail-default-start-time">@TimeHelper.TimeOfDayFromTimeSpan(new TimeSpan(0, 0, 0))</div>
<div class="displaynone" id="Communication-detail-default-end-time">@TimeHelper.TimeOfDayFromTimeSpan(new TimeSpan(23, 59, 0))</div>

<div id="Communication-body-inner" class="communication-body-inner relative">
	<div id="Message-detail-section" class="displaynone communication-edit-section ui-corner-all" data-bind="with : chosenMessage">
		<input type="hidden" id="Request-detail-entityid"/>
		<div class="edit-module-element communication-detail-sender displayinline-block">
			<label data-bind="text : sender"></label>
		</div>
		<div class="edit-module-element communication-detail-sent displayinline-block">
			<label data-bind="text : date"></label>
		</div>
		<div class="edit-module-element communication-detail-title">
			<label id="Message-detail-title" data-bind="text : title"></label>
		</div>
		<div class="edit-module-element">
			<label id="Message-detail-message" data-bind="text : message"></label>
		</div>
        <input id="Message-detail-ok-button" type="button" class="button mb5 floatright" data-bind="click : confirmReadMessage, enable : isConfirmButtonEnabled" value="@Html.AttributeEncode(Resources.Ok)"/>
	</div>
	<div class="communication-list">
		<div id="friendly-message" class="friendly-message ui-corner-all floatleft" data-bind="visible: shouldShowMessage">
			@Resources.NoMessagesFound
		</div>
		<ol id="Communications-list" data-bind="foreach: communicationList">
			<li class="ui-corner-all communication-item relative" data-bind="css: { 'communication-selected': isSelected() == true }">
                <span id="mySpan" class="displaynone" data-bind="text : messageId"></span>
                <div class="communication-arrow-right">
                    <img src="@Url.Content("~/Areas/MyTime/Content/Images/arrow-right.png")"/>   
                </div>
				<div class="communication-subject">
					<h3 class="communication-data-subject" data-bind="text : title">
					</h3>
				</div>
				<div class="communication-details">
					<div>
						<span class="communication-caption">@Resources.Sender: </span>
						<span class="communication-data-type" data-bind="text : sender"></span>
						<span class="communication-caption">@Resources.Sent: </span>
						<span class="communication-data-updatedon" data-bind="text : date"></span>
					</div>
				</div>
				<div class="communication-text communication-data-text" data-bind="text : message">
				</div>             
			</li>
		</ol>
		<div class="loading-gradient" style="display: none">
			<div class="loading"></div>
		</div>
		<div class="arrow-down"></div>
		<div class="clearboth"></div>
	</div>
</div>