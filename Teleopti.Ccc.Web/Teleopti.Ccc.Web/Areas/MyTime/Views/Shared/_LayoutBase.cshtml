@using System.Web.Optimization
@using Teleopti.Ccc.Web.Areas.MyTime.Core
<!doctype html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html @Html.LayoutBase().FullLangAttribute()@Html.LayoutBase().FullDirAttribute() class="no-js ">
<!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>@ViewBag.LayoutBase.Title</title>
	<meta name="description" content="" />
	<meta name="author" content="" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    
	@{
	    var version = 1;// @ViewBag.LayoutBase.Version;
	}
	
	@Styles.Render("~/MyTimeCss")
	<link href="@Url.Content("~/content/favicon.ico")" rel="shortcut icon" type="image/x-icon"/>
    <script src="@Url.Content("~/Content/jquery/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/Content/Scripts/knockout-2.2.1.js")"></script>
	<script src="@Url.Content("~/Content/moment/moment.js")"></script>
	<script src="@Url.Content("~/Content/moment/moment.all.min.js")"></script>
    <script src="@Url.Content("~/Content/moment-datepicker/moment-datepicker.js")"></script>
    <script src="@Url.Content("~/Content/moment-datepicker/moment-datepicker-ko.js")"></script>
	<script src="@Url.Content("~/Content/signals/signals.min.js")"></script>
	<script src="@Url.Content("~/Content/hasher/hasher.min.js")"></script>
	<script src="@Url.Content("~/Content/crossroads/crossroads.min.js")"></script>
	<script src="@Url.Content("~/Content/Scripts/modernizr-2.6.2.js")"></script>
	<script src="@Url.Content("~/Content/bootstrap/bootstrap.js")"></script>
	<script src="@Url.Content("~/Content/jqueryui/jquery-ui-1.10.2.custom.js")"></script>
	<script src="@Url.Content("~/Content/Scripts/json2.js")"></script>
	<script src="@Url.Content("~/Content/Scripts/jquery.hoverIntent.js")"></script>
	<script src="@Url.Content("~/Content/jquery-plugin/jquery.placeholder.min.js")"></script>
	<script src="@Url.Content("~/Content/Scripts/jquery.qtip.js")"></script>
	<script src="@Url.Content("~/Content/Scripts/indexOf.js")"></script>
	<script src="@Url.Content("~/Content/signalr/jquery.signalR-1.1.2.min.js")"></script>
	<script src="@Url.Content("~/Content/signalr/broker-hubs.js")"></script>
	<script src="@Url.Content("~/Content/select2/select2.js")"></script>
	<script src="@Url.Content("~/Content/bootstrap-timepicker/js/bootstrap-timepicker.js")"></script>

	<script src="@Url.Content("~/Content/Scripts/pinify/scripts/jquery.pinify.min.js")"></script>
	
	@Scripts.Render("~/MyTimeJs")


	@if (ViewBag.LayoutBase.FixedDate != null)
	{
		DateTime date = ViewBag.LayoutBase.FixedDate;
		<script type="text/javascript">
			$(function () {
				Date.prototype.getTeleoptiTime = function () { return new Date(@(date.Year), @(date.Month -1), @(date.Day), @(date.Hour), @(date.Minute), @(date.Second)).getTime(); };
			});
		</script>		
 }
 else
	{
		<script type="text/javascript">
			$(function () {
				Date.prototype.getTeleoptiTime = function () { return new Date().getTime(); };
			});
		</script>	
	}
	
	@RenderSection("head", required: false)
</head>
<body @Html.LayoutBase().FullDirClass()@Html.LayoutBase().FullDirAttribute()>
	@RenderSection("header", required: false)
	@RenderBody()
	<footer class="col-1"> 
		
		  <p>@ViewBag.LayoutBase.Footer</p>
		
	 </footer>
	<div id="dialog-modal">
	</div>
	<div id="dialog">
	</div>
	<div id="modal-disable"></div>
	<span id="notifyLogger" style="display: none"></span>
</body>
</html>
