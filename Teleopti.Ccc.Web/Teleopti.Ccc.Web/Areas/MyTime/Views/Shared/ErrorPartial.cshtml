@using Teleopti.Ccc.Web.Models.Shared
@model ErrorViewModel
@{
	Layout = null;
}
<div id="error-panel" class="ui-tabs-panel ui-widget-content ui-corner-bottom fullwidth">
	<div class="error app-error">
		<h1>@Model.Message</h1>
	</div>
    <div class="floatleft clearboth ml10 mt5">
		<a href="javascript: history.go(-1)" class="btn btn-primary">@Teleopti.Ccc.UserTexts.Resources.Back</a>
    </div>
	<div class="floatright mr10 mt5">
		@Html.ActionLink(Teleopti.Ccc.UserTexts.Resources.Cancel, "SignOut", "Authentication", new { returnUrl = "~/" }, new { @class = "btn btn-default" })	
	</div>
</div>
