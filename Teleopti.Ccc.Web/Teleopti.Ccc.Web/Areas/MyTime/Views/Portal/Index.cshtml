@using Teleopti.Ccc.Web.Areas.MyTime.Core
@using Teleopti.Ccc.Web.Areas.MyTime.Models.Portal
@model PortalViewModel

@section head {
	<script type="text/javascript">
		jQuery(function () { 
			$.datepicker.setDefaults(@Html.LayoutBase().DatePickerGlobalizationAsJson());
			Teleopti.MyTimeWeb.Portal.Init(
				{
					defaultNavigation: '@Html.Portal().GetDefaultAction(Model)',
					baseUrl: '@Url.Content("~/MyTime/")'
				});
		});
	</script>
}
<header class="col-1 mb10" dir="ltr"> 
		@Html.Partial("Navigation", Model)
</header>
<section id="page">
<article id="body" class="col-1">
    <div id="body-inner" class="pdl5 pdt5 pdr5">
	</div>
	<div id="body-bottom" class="pdb5">
	</div>
</article>
	<div id="loading">
		<img src="@Url.Content("~/Areas/MyTime/Content/Images/ajax-loader.gif")" alt="Loading..." />	
	</div>
</section>
