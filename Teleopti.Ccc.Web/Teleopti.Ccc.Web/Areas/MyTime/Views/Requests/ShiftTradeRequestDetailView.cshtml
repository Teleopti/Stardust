@using Teleopti.Ccc.UserTexts
@{
    Layout = null;
}

 <div class="pdb5 request-detail-title">@Resources.ShiftTradeRequest</div>
    <div class="edit-module-element">
        <label class="displayblock" for="Request-detail-subject-input">@Resources.Subject</label>
        <input id="Request-detail-subject-input" type="text" />
    </div>

    <br/>
    <br/>
    <div>
        <span>xxFrom: 
        </span>
        <span id="Request-shift-trade-sender" data-bind="text: From"></span>
    </div>
    
    <div>| 08:00 | 09:00 | 10:00 | 11:00 | 12:00 | 13:00 | 14:00 | 15:00 | 16:00 | 17:00 | </div>
    <span style="background: green; width: 50px; position: relative; display:inline-block; float: left; margin-left: 80px;" >Phone</span>
    <span style="background: red; width: 20px; position: relative; display:inline-block; float: left" >SB</span>
    <span style="background: green; width: 50px; position: relative; display:inline-block; float: left" >Phone</span>
    <span style="background: yellow; width: 80px; position: relative; display:inline-block; float: left" >Lunch</span>
    <span style="background: green; width: 100px; position: relative; display:inline-block; float: left" >Phone</span>

    <br/>
    <br/>
    <br/>
    <div class="arrow-down"></div>
    <div>
        <span>xxTo: 
        </span>
        <span id="Request-shift-trade-reciever" data-bind="text: To"></span>
    </div>
   
    <div>| 08:00 | 09:00 | 10:00 | 11:00 | 12:00 | 13:00 | 14:00 | 15:00 | 16:00 | 17:00 |</div>
    <span style="background: green; width: 100px; position: relative; display:inline-block; float: left; margin-left: 30px;" >Phone</span>	
    <span style="background: yellow; width: 80px; position: relative; display:inline-block; float: left" >Lunch</span>
    <span style="background: green; width: 50px; position: relative; display:inline-block; float: left" >Phone</span>
    <span style="background: red; width: 20px; position: relative; display:inline-block; float: left" >SB</span>
    <span style="background: green; width: 50px; position: relative; display:inline-block; float: left" >Phone</span>
    <br/>
    <br/>
    <br/>
	
    <div  class="floatright" data-bind="visible: CanApprove" >
        <input type="button" id="Approve-shift-trade" value="@Resources.Approve" data-bind="click: Approve" class="button mb5"></input>
        <input type="button" id="Deny-shift-trade" value="@Resources.Deny" data-bind="click: Deny" class="button mb5"></input>
    </div>
	
    <div data-bind="click: henkeTest">HENKE TEST</div>
	
    <!-- TESTAREA FOR TIMELINE -->
    <!-- visa/bind endast om vi har hämtat data -->
    <div>start</div>
    <div  class="shift-trade-timeline" data-bind="foreach: hours">
        <span class="shift-trade-timeline-line" data-bind="style: { width : hourWidth }">
            <span class="shift-trade-timeline-number ui-corner-all" data-bind="text: hourText, style: {left: leftPx}"></span>
        </span>
        
       
    </div>
	 <div class="shift-trade-my-schedule-row">
			<span style="width: 150px; float: left" data-bind="text: mySchedule().agentName"></span>
			<div class="shift-trade-my-schedule" data-bind="foreach: mySchedule().layers">
				<span class="shift-trade-layer ui-corner-all" data-bind="style: { left : leftPx, backgroundColor : backgroundColor, paddingLeft : paddingLeft}, attr: {'title' : title}, css:{ striped : $parent.mySchedule().showDayOffStyle(), dayoff : $parent.mySchedule().showDayOffStyle() }">
					<span class="shift-trade-dayoff-name" data-bind="text: $parent.mySchedule().dayOffText"></span>
				</span>
			</div>
		</div>
		
			<div class="shift-trade-person-schedule-row">
				<span class="shift-trade-agent-name" data-bind="text: otherSchedule().agentName"></span>
				<div class="shift-trade-possible-trade-schedule" data-bind="foreach: otherSchedule().layers">
					<span class="shift-trade-layer ui-corner-all" data-bind="style: { left : leftPx, backgroundColor : backgroundColor, paddingLeft : paddingLeft}, attr: {'title' : title}, css:{ striped : $parent.otherSchedule().showDayOffStyle(), dayoff : $parent.otherSchedule().showDayOffStyle() }">
						<span class="shift-trade-dayoff-name" data-bind="text: $parent.dayOffText"></span>
					</span>					
				</div>
			
		</div>
		
	<!-- ENDING TESTAREA FOR TIMELINE -->
