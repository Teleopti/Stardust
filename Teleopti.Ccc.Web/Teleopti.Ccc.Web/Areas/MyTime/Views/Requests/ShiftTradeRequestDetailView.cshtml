@using Teleopti.Ccc.UserTexts
@{
    Layout = null;
}

 <div class="pdb5 request-detail-title">@Resources.ShiftTradeRequest</div>
	 
	 <div id="Request-shift-trade-detail-subject" data-bind="text: Subject"></div>
	 <div id="Request-shift-trade-detail-message" data-bind="text: MessageText"></div>
<br/>
<br />
<br/>
	
<div>
	<br/>
	<div>
	<div class="shift-trade-swap-detail-agent-name" id="Request-shift-trade-sender" style="width: 150px;" data-bind="text: mySchedule().agentName"></div>
	<div  class="shift-trade-swap-detail-timeline" data-bind="foreach: hours">
		<span class="shift-trade-timeline-line" data-bind="style: { width : hourWidth }">
			<span class="shift-trade-timeline-number ui-corner-all" data-bind="text: hourText, style: {left: leftPx}"></span>
		</span>
	</div>
	<div class="shift-trade-swap-detail-schedule-row">
			
		<div class="shift-trade-swap-detail-schedule" data-bind="foreach: mySchedule().layers">
			<span class="shift-trade-layer " data-bind="style: { left : leftPx, backgroundColor : backgroundColor, paddingLeft : paddingLeft}, attr: {'title' : title}, css:{ striped : $parent.mySchedule().showDayOffStyle(), dayoff : $parent.mySchedule().showDayOffStyle() }">
				<span class="shift-trade-dayoff-name" data-bind="text: $parent.mySchedule().dayOffText"></span>
			</span>
		</div>
	</div>
		
	</div>	
	
	<br/>
	<div>
	<div class="shift-trade-swap-detail-agent-name" id="Request-shift-trade-reciever" data-bind="text: otherSchedule().agentName"></div>
		<div class="shift-trade-swap-detail-schedule-row">
			
			<div  class="shift-trade-swap-detail-timeline" data-bind="foreach: hours">
				<span class="shift-trade-timeline-line" data-bind="style: { width : hourWidth }">
					<span class="shift-trade-timeline-number ui-corner-all" data-bind="text: hourText, style: {left: leftPx}"></span>
				</span>
			</div>
			<div class="shift-trade-swap-detail-schedule" data-bind="foreach: otherSchedule().layers">
				<span class="shift-trade-layer" data-bind="style: { left : leftPx, backgroundColor : backgroundColor, paddingLeft : paddingLeft}, attr: {'title' : title}, css:{ striped : $parent.otherSchedule().showDayOffStyle(), dayoff : $parent.otherSchedule().showDayOffStyle() }">
					<span class="shift-trade-dayoff-name" data-bind="text: $parent.dayOffText"></span>
				</span>					
			</div>	
		</div>
		</div>
</div>
  <div  class="floatright" data-bind="visible: CanApprove" >
        <input type="button" id="Approve-shift-trade" value="@Resources.Approve" data-bind="click: Approve" class="button mb5"></input>
        <input type="button" id="Deny-shift-trade" value="@Resources.Deny" data-bind="click: Deny" class="button mb5"></input>
    </div>

