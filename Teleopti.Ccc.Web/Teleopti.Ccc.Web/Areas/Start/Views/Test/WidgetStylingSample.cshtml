	<script type="text/javascript">
	    $(function() {
	        $("#splitbutton-sample").splitbutton();
	        $("#selectbox-sample-list1").selectbox();
	        $("#selectbox-sample-list2").selectbox();
	        $("#combobox-sample-list1").combobox();
	        $("#combobox-sample-list2").combobox();
	        $("#the-input").labeledinput();
	    });
	</script>
</head>
<body dir="@(Request.QueryString["dir"] ?? "ltr")">
	<div class="floatleft">
		<h1>Splitbutton</h1>
		<div id="splitbutton-sample">
			
        <button title="Sample" id="splitbutton-sample-set-button"></button>
			<select title="Sample" id="splitbutton-sample-list">
				<optgroup label="Option group"></optgroup>
				<option value="option1" selected="selected">Option 1</option>
				<option value="option2">Option 2</option>
				<option value="-">Separator with text</option>
				<option value="option3">Option 3</option>
				<option value="-"></option>
				<option value="option4">Option 4</option>
			</select>
		</div>
	</div>
    
	<div class="floatleft">
		<h1>Selectbox</h1>
		<span id="selectbox-sample1">
			<select title="Sample" id="selectbox-sample-list1" class="ui-selectbox-init">
				<optgroup label="Option group"></optgroup>
				<option value="option1" selected="selected">Option 1</option>
				<option value="option2">Option 2</option>
				<option value="-">Separator with text</option>
				<option value="option3">Option 3</option>
				<option value="-"></option>
				<option value="option4">Option 4</option>
			</select>
		</span>
		<span id="selectbox-sample2">
			<select title="Sample" id="selectbox-sample-list2" class="ui-selectbox-init">
				<optgroup label="Option group"></optgroup>
				<option value="option1" selected="selected">Option 1</option>
				<option value="option2">Option 2</option>
				<option value="-">Separator with text</option>
				<option value="option3">Option 3</option>
				<option value="-"></option>
				<option value="option4">Option 4</option>
			</select>
		</span>
	</div>
	<br />
    <div>
		<h1>Labeled input</h1>
		<div id="labeled-input-sample">
			<label class="displayblock" for="the-input">Label text:</label>
		    <input id="the-input" type="text"/>
		</div>
	</div>
    <br />
	<div class="floatleft">
		<h1>Combobox</h1>
		<span id="combobox-sample1">
			<select title="Sample" id="combobox-sample-list1">
				<optgroup label="Option group"></optgroup>
				<option value="option1">Option 1</option>
				<option value="option2">Option 2</option>
				<option value="-">Separator with text</option>
				<option value="option3">Option 3</option>
				<option value="-"></option>
				<option value="option4">Option 4</option>
			</select>
		</span>
		<span id="combobox-sample2">
			<select title="Sample" id="combobox-sample-list2">
				<optgroup label="Option group"></optgroup>
				<option value="option1">Option 1</option>
				<option value="option2">Option 2</option>
				<option value="-">Separator with text</option>
				<option value="option3">Option 3</option>
				<option value="-"></option>
				<option value="option4">Option 4</option>
			</select>
		</span>
	</div>
    
