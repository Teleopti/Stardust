@using Teleopti.Ccc.Web.Areas.Start.Models.Test
@model TestMessageViewModel
@{
	Layout = null;
}
<!doctype html>
<html>
    <head>
        <title>@Model.Title</title>
    </head>
    <style>
        body {
            font-family: Helvetica;
            padding: 30px;
        }
        .frame {
            padding: 20px;
            background-color: #ddffdd;
            border-radius: 4px;
            border: 1px solid #00ff00;
            color: #555555;
        }
        .frame h1 {
            margin-left: 20px;
            font-size: 18px;
        }
        .inset {
            margin-top: 23px;
            border: 1px solid #00ff00;
            border-radius: 4px;
            background: white;
            padding: 10px;
        }
        .inset ul {
            padding-left: 40px;
            list-style-type: circle;
            line-height: 20px;
            font-size: 12px;
        }
    </style>
    <body>
        <div class="frame">
		<h1>@Model.Message</h1>
		@if (Model.ListItems.Any())
		{
			<div class="inset">
				<ul>
					@foreach (var item in Model.ListItems)
					{
						<li>@item</li>
					}
				</ul>
			</div>
		}
        </div>
    </body>
</html>​
