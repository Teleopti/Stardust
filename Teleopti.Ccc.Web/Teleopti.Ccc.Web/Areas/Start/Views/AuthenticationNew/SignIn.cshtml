<section id="page-signin">
	<div class="container" id="Login-container">
		
		<div class="login-logo">
			<img src="@Url.Content("~/Areas/Start/Content/Images/mobile_logo.png")"/>
		</div>
		
		<div id="view" class="login-form well well-large"></div>

		<div id="signin">
			<ul id="DataSources" data-bind="foreach: DataSources" class="nav nav-tabs nav-stacked">
				<li data-bind="css: {'active': Selected}, class: Type">
					<a href="#" data-bind="click: Select">
						<span data-bind="text: Name"></span>
						<span data-bind="if: Type == 'windows'">@Resources.WindowsLogonWithBrackets</span>
					</a>
				</li>
			</ul>
			<!-- ko if: DisplayUserNameAndPasswordBoxes -->
			<div>
				<input type="text" id="Username-input" placeholder=@Resources.UserName class="input-block-level" data-bind="value: UserName" />
			</div>
			<div>
				<input type="password" id="Password-input" placeholder=@Resources.Password class="input-block-level" data-bind="value: Password" />
			</div>
			<!-- /ko -->

			<button class="btn btn-primary" id="Login-button" data-bind="click: SignIn">@Resources.LogOn</button>
			<span class="error" data-bind="text: ErrorMessage"></span>
		</div>
		
		<div id="businessunit">
			<h3>Select business unit:</h3>
			<ul data-bind="foreach: BusinessUnits" class="nav nav-tabs nav-stacked">
				<li><a href="#" data-bind="text: Name, click: Select"></a></li>
			</ul>
		</div>

		<div id="menu">
			<h3>Select application:</h3>
			<ul data-bind="foreach: Applications" class="nav nav-tabs nav-stacked">
				<li>
					<a href="#" data-bind="attr: {href: Url}, text: Name"></a>
				</li>
			</ul>
		</div>

