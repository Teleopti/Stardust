@using Teleopti.Ccc.Web.Models.Shared
@model ErrorViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; minimum-scale=1.0; user-scalable=0;" />
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<title>Teleopti Anywhere Error</title>
	<link rel="stylesheet" href="@Url.Content("~/Content/MobileContent/themes/cccanywhere_theme/CCCAnywhere.min.css")" />
	<link rel="stylesheet" href="@Url.Content("~/Content/MobileContent/Mobile/jquery.mobile.structure-1.0.1.min.css")" />
	<link rel="stylesheet" href="@Url.Content("~/Content/MobileContent/themes/cccanywhere_theme/cccanywhere-custom.css")" />
	<script src="@Url.Content("~/Content/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/MobileContent/Mobile/jquery.mobile-1.0.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Areas/MobileReports/Content/Scripts/Teleopti.MobileReports.Common.js")"></script>		
</head>
<body>
	<div data-role="page" id="error-view">
		<div data-role="header">
			<h1>
				Anywhere Error
			</h1>
		</div>
		<div data-role="content">
			<ul data-role="listview" data-inset="true" data-theme="b">
				<li data-role="list-divider">@Model.Message</li>
			</ul>
		</div>
	</div>
</body>
</html>
