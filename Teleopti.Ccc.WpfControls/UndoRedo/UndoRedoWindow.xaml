<Window x:Class="Teleopti.Ccc.WpfControls.UndoRedo.UndoRedoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:Teleopti.Ccc.WpfControls.UndoRedo.Views"
    xmlns:ViewModels="clr-namespace:Teleopti.Ccc.WpfControls.UndoRedo.ViewModels"
    xmlns:Timeline="clr-namespace:Teleopti.Ccc.WpfControls.Controls.Time.Timeline"
    Height="800" Width="800" >
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModels:UndoRedoViewModel}">
            <Views:UndoRedoView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="xxUndoredo stuff"/>
        <Timeline:TimelineControlView DataContext="{Binding Path=TimelineControlViewModel}" Height="50" HorizontalAlignment="Stretch"/>
        <ContentPresenter Content="{Binding}" Grid.Row="1"/>
    </Grid>
</Window>
