<!--Uses IViewModelIsValid as DataContext-->
<Border x:Class="Teleopti.Ccc.WpfControls.Common.ErrorBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Teleopti.Ccc.WpfControls.Converters"
    BorderThickness="1"
    BorderBrush="Red"
    Margin="0,0,-5,0" 
    CornerRadius="3"
            IsHitTestVisible="False">
    <Border.Resources>
        <Converters:ReversedVisibilityConverter  x:Key="errorConverter"/>
    </Border.Resources>
    <Border.Visibility>
        <Binding Path="IsValid" FallbackValue="Visible" Converter="{StaticResource errorConverter}" /> 
    </Border.Visibility>
       
       
        <Border.Effect>
            <DropShadowEffect Color="#FF856F6F" Opacity="0.645"/>
        </Border.Effect>

  
</Border>
