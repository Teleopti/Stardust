<UserControl x:Class="Teleopti.Ccc.WpfControls.Common.Interop.MultipleHostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WincodeInterop="clr-namespace:Teleopti.Ccc.WinCode.Common.Interop;assembly=Teleopti.Ccc.WinCode"
    xmlns:Interop="clr-namespace:Teleopti.Ccc.WpfControls.Common.Interop">
    <UserControl.Resources>
        <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="..\..\Resources\CommonBrushes.xaml"/>
        </ResourceDictionary.MergedDictionaries>
        
        <DataTemplate DataType="{x:Type WincodeInterop:MultipleHostViewModel}" x:Key="View">
            <Interop:TabbedHostView DataContext="{Binding}"/>
        </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <ContentControl Margin="0,0,0,0" VerticalAlignment="Stretch" Content="{Binding}" 
                    ContentTemplate="{StaticResource View}" 
                    Background="{StaticResource RaptorStandardGradientBrush}"/>
</UserControl>
