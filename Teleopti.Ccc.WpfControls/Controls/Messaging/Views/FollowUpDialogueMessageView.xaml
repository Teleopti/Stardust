<UserControl x:Class="Teleopti.Ccc.WpfControls.Controls.Messaging.Views.FollowUpDialogueMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Teleopti.Ccc.WpfControls.Controls">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="35"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="35"/>
		</Grid.RowDefinitions>
        <Controls:AnalogPresenter DataContext="{Binding Path=CreatedAsLocal}"  
								  HorizontalAlignment="Stretch" 
								  VerticalAlignment="Center"
								  Margin="0"/>

        <TextBlock Text="{Binding Path=CreatedAsLocal,StringFormat=d}"
				   Grid.Column="1"  
				   Margin="2,0,5,0" 
				   VerticalAlignment="Center"/>
		
		<TextBlock	Grid.Column="2"
					Text="{Binding Path=Text}" 
					VerticalAlignment="Center"/>
	</Grid>
</UserControl>
