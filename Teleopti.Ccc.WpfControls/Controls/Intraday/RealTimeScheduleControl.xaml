<UserControl x:Class="Teleopti.Ccc.WpfControls.Controls.Intraday.RealTimeScheduleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:Teleopti.Ccc.WpfControls.Controls.Intraday.Models"
    xmlns:Views="clr-namespace:Teleopti.Ccc.WpfControls.Controls.Intraday.Views"
    xmlns:Intraday="clr-namespace:Teleopti.Ccc.WpfControls.Controls.Intraday" 
             xmlns:GuiHelpers="clr-namespace:Teleopti.Ccc.WinCode.Common.GuiHelpers;assembly=Teleopti.Ccc.WinCode"
           GuiHelpers:HelpProvider.HelpString="IntradayView+IntradayScheduleView"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type Models:RealTimeScheduleViewModel}">
            <Views:RealTimeScheduleView DataContext="{Binding}"/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Intraday:SimpleLayerView.SelectShift="SelectShift">
        <ContentControl Content="{Binding}"/>
    </Grid>
</UserControl>
