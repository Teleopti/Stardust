<UserControl x:Class="Teleopti.Ccc.WpfControls.Controls.AddToSchedule.AddOvertimePreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Commands="clr-namespace:Teleopti.Ccc.WinCode.Common.Commands;assembly=Teleopti.Ccc.WinCode"
             xmlns:DateTimePeriodControl="clr-namespace:Teleopti.Ccc.WpfControls.Controls.DateTimePeriodControl"
   Commands:CreateCommandBinding.Target="{Binding}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\..\Resources\Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Label>xxActivity</Label>
                <ComboBox Style="{StaticResource BasicComboBox}" ItemsSource="{Binding Path=Activities}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>xxMultiplicator</Label>
                <ComboBox Style="{StaticResource BasicComboBox}" ItemsSource="{Binding Path=MultiplicatorDefinitionSet}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <DateTimePeriodControl:EditableDateTimePeriodPreview DataContext="{Binding Path=PeriodViewModel}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>