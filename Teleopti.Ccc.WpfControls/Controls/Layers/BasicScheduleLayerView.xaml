<UserControl x:Class="Teleopti.Ccc.WpfControls.Controls.Layers.BasicScheduleLayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:Teleopti.Ccc.WpfControls.Converters">
	<UserControl.Resources>
		<converters:ColorConverter x:Key="ColorConverter"/>
	</UserControl.Resources>
	<Rectangle HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Opacity="1"
            Fill="{Binding Path=DisplayColor, Converter={StaticResource ColorConverter}, FallbackValue=White}"
            Cursor="Hand">
		<Rectangle.CacheMode>
			<BitmapCache />
		</Rectangle.CacheMode>
	</Rectangle>
</UserControl>
