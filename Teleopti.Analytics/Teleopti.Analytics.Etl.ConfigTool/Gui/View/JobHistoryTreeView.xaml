<UserControl x:Class="Teleopti.Analytics.Etl.ConfigTool.Gui.View.JobHistoryTreeView"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:Controls="clr-namespace:Ricciolo.Controls;assembly=Ricciolo.Controls.TreeListView"
			xmlns:ViewModel="clr-namespace:Teleopti.Analytics.Etl.ConfigTool.Gui.ViewModel"
			xmlns:Commands="clr-namespace:Teleopti.Analytics.Etl.ConfigTool.Gui.ViewModel"
			 >

	<Control.Resources>
		<HierarchicalDataTemplate x:Key="dt"  ItemsSource="{Binding Path=JobStepsHistory}" DataType="{x:Type ViewModel:JobHistoryTreeViewModel}" />
		<SolidColorBrush x:Key="ErrorColor" Color="Red" />
	</Control.Resources>
	<Grid>
		<Controls:TreeListView x:Name="treeListView"  ItemsSource="{Binding}" ItemTemplate="{StaticResource dt}" PreviewMouseRightButtonDown="treeListView_PreviewMouseRightButtonDown" SelectedItemChanged="treeListView_SelectedItemChanged">
			<Controls:TreeListView.ContextMenu>
				<ContextMenu Opened="ContextMenu_Opened">
					<!--<MenuItem x:Name="menuItemCopyError" Header="Copy Error" Click="menuItemCopyError_Click" Command="{Binding Path=CopyExceptionCommand}" />-->
					<MenuItem x:Name="menuItemCopyError" Header="Copy Error" Command="{Binding Path=CopyExceptionCommand}" />
				</ContextMenu>
			</Controls:TreeListView.ContextMenu>
			<Controls:TreeListView.Columns>
				<GridViewColumn Header="Job Name" DisplayMemberBinding="{Binding Path=Name}" Width="250" />
				<GridViewColumn Header="Business Unit Name" DisplayMemberBinding="{Binding Path=BusinessUnitName}" Width="120" />
				<GridViewColumn Header="Start" DisplayMemberBinding="{Binding Path=StartTime}" Width="130" />
				<GridViewColumn Header="End" DisplayMemberBinding="{Binding Path=EndTime}" Width="130" />
				<GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Path=Duration}" Width="65" />
				<GridViewColumn Header="Affected Rows" DisplayMemberBinding="{Binding Path=RowsAffected}" Width="85" />
				<GridViewColumn Header="Job Schedule name" DisplayMemberBinding="{Binding Path=ScheduleName}" Width="150" />
				<GridViewColumn Header="Tenant name" DisplayMemberBinding="{Binding Path=TenantName}" Width="150" />
				<GridViewColumn Header="Error Message" DisplayMemberBinding="{Binding Path=ErrorMessage}" Width="350" />
			</Controls:TreeListView.Columns>
			<Controls:TreeListView.ItemContainerStyle>
				<Style TargetType="{x:Type TreeViewItem}">
					<Setter Property="IsSelected" Value="{Binding IsSelected}" />
					<Setter Property="Foreground">
						<Setter.Value>
							<Binding RelativeSource="{x:Static RelativeSource.Self}" Path="Success" />
						</Setter.Value>
					</Setter>
					<Style.Triggers>
						<DataTrigger Binding="{Binding Path=Success}" Value="False">
							<DataTrigger.Setters>
								<Setter Property="Foreground" Value="{StaticResource ErrorColor}"></Setter>
							</DataTrigger.Setters>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Controls:TreeListView.ItemContainerStyle>
		</Controls:TreeListView>
	</Grid>
</UserControl>
