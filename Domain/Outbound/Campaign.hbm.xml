<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.Outbound"
									 default-access="field.camelcase-underscore">

	<class name="Campaign" table="OutboundCampaign">
		<id name="Id"
				type="guid"
				access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb"/>
		</id>

		
		<property name="Name"
						access="property"
						type="string"
						length="250"
						not-null="true"/>
			
		<many-to-one name="Skill"
								 class="Teleopti.Ccc.Domain.Forecasting.Skill"
								 not-null="true"/>
		
		<property name="CallListLen"
							type="int"
							not-null="true"/>
		
		<property name="TargetRate"
							type="int"
							not-null="true"/>
		
		<property name="ConnectRate"
							type="int"
							not-null="true"/>
		
		<property name="RightPartyConnectRate"
							type="int"
							not-null="true" />
		
		<property name="ConnectAverageHandlingTime"
							type="int"
							not-null="true"/>
		
		<property name="RightPartyAverageHandlingTime"
							type="int"
							not-null="true"/>
		
		<property name="UnproductiveTime"
							type="int"
							not-null="true"/>
		
		<map name="WorkingHours"
                table="OutboundCampaignWorkingHours"
                cascade="all-delete-orphan"
                lazy="false">
        <key column="Parent" foreign-key="FK_OutboundCampaignWorkingHours_OutboundCampaign"/>
        <index type="System.DayOfWeek" column="Weekday"/>
			<composite-element class="Teleopti.Interfaces.Domain.TimePeriod, Teleopti.Interfaces" >
				<nested-composite-element class="Teleopti.Interfaces.Domain.MinMax`1[System.TimeSpan], Teleopti.Interfaces"
										  name="period" access="field">
					<property name="Minimum" 
							column="StartTime"
							not-null="true"
							type="TimeSpan"/>
					<property name="Maximum"
							column="EndTime"
							not-null="true"
							type="TimeSpan"/>
				</nested-composite-element>
			</composite-element>	
      </map>

		<component name="SpanningPeriod" class="Teleopti.Interfaces.Domain.DateTimePeriod, Teleopti.Interfaces">
			<component name="period" access="field">
				<property name="Minimum" column="StartDate" not-null="true" type="UtcDateTime"/>
				<property name="Maximum" column="EndDate" not-null="true" type="UtcDateTime"/>
			</component>
		</component>
		
    <map name="_manualProductionPlanDays" table="OutboundCampaignManualProductionTime" access="field" cascade="all-delete-orphan" lazy="false">
      <key column="Campaign" foreign-key="FK_OutboundCampaignManualProductionTime_OutboundCampaign"/>
      <index column="Date" type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure" />
      <element column="PlannedTime" type="TimeSpan" />
    </map>

    <map name="_actualBacklogDays" table="OutboundCampaignActualBacklog" access="field" cascade="all-delete-orphan" lazy="false">
      <key column="Campaign" foreign-key="FK_OutboundCampaignActualBacklog_OutboundCampaign"/>
      <index column="Date" type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure" />
      <element column="ActualBacklog" type="TimeSpan" />
    </map>
    
		<many-to-one name="UpdatedBy"
								 class="Teleopti.Ccc.Domain.Common.Person"
								 not-null="true"/>

		<property name="UpdatedOn"
								type="UtcDateTime"
								not-null="true"/>
		
		<property name="IsDeleted"
							type="boolean"
							not-null="true"/>

		<many-to-one name="BusinessUnit"
					class="Teleopti.Ccc.Domain.Common.BusinessUnit"
					access="nosetter.camelcase-underscore"
					not-null="true"/>

		<filter name="businessUnitFilter"
						condition=":businessUnitParameter = BusinessUnit" />
		<filter name="deletedFlagFilter"
		  condition="IsDeleted = 0" />

    
    
	</class>
</hibernate-mapping>
