<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.Outbound"
									 default-access="field.camelcase-underscore">

	<class name="Campaign" table="OutboundCampaign">
		<id name="Id"
				type="guid"
				access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb"/>
		</id>

		
		<property name="Name"
						access="property"
						type="string"
						length="250"
						not-null="true"/>
			
		<many-to-one name="Skill"
								 class="Teleopti.Ccc.Domain.Forecasting.Skill"
								 not-null="true"
								 foreign-key="FK_OutboundCampaign_Skill"/>
		
		<property name="CallListLen"
							type="int"
							not-null="true"/>
		
		<property name="TargetRate"
							type="int"
							not-null="true"/>
		
		<property name="ConnectRate"
							type="int"
							not-null="true"/>
		
		<property name="RightPartyConnectRate"
							type="int"
							not-null="true" />
		
		<property name="ConnectAverageHandlingTime"
							type="int"
							not-null="true"/>
		
		<property name="RightPartyAverageHandlingTime"
							type="int"
							not-null="true"/>
		
		<property name="UnproductiveTime"
							type="int"
							not-null="true"/>

		<property name="StartDate"
							type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"
							not-null="true" />

		<property name="EndDate"
							type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"
							not-null="true" />
		
		<property name="CampaignStatus"
							type="int"
							not-null="true"/>

		<set name="CampaignWorkingPeriods"
				 inverse="true">
			<key column="OutboundCampaign"/>
			<one-to-many class="CampaignWorkingPeriod"/>				
		</set>
	
		<many-to-one name="UpdatedBy"
								 class="Teleopti.Ccc.Domain.Common.Person"
								 not-null="true"
								 foreign-key="FK_SeatBooking_Person_UpdatedBy"/>

		<property name="UpdatedOn"
								type="UtcDateTime"
								not-null="true"/>
		
		<property name="IsDeleted"
							type="boolean"
							not-null="true"/>

		<many-to-one name="BusinessUnit"
					class="Teleopti.Ccc.Domain.Common.BusinessUnit"
					access="nosetter.camelcase-underscore"
					not-null="true" foreign-key="FK_OutboundCampaign_BusinessUnit"/>

		<filter name="businessUnitFilter"
						condition=":businessUnitParameter = BusinessUnit" />
		<filter name="deletedFlagFilter"
		  condition="IsDeleted = 0" />

	</class>
</hibernate-mapping>
