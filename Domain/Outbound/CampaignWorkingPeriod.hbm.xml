<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Outbound"
                   default-access="field.camelcase-underscore">
	<class name="CampaignWorkingPeriod">
		<id name="Id"
        type="guid"
		  	access="nosetter.camelcase-underscore"
        unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		
		<many-to-one name="Parent" 
								 class="Campaign"
								 access="property"
								 not-null="true"/>

		<set name="CampaignWorkingPeriodAssignments"
				 cascade="all-delete-orphan">
			<key column="OutboundCampaignWorkingPeriod" />
			<one-to-many class="CampaignWorkingPeriodAssignment"/>
		</set>

		<component name="TimePeriod" class="Teleopti.Interfaces.Domain.TimePeriod, Teleopti.Interfaces">
			<component name="period" access="field">
				<property name="Minimum"
									column="StartTime"
									not-null="true"
									type="TimeSpan" />
				<property name="Maximum"
									column="MaximumLength"
									not-null="true"
									type="TimeSpan" />
			</component>
		</component>	
	</class>	
</hibernate-mapping>