<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Outbound"
                   default-access="field.camelcase-underscore">
	<class name="CampaignWorkingPeriod">
		<id name="Id"
        type="guid"
		  				access="nosetter.camelcase-underscore"
        unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		
		<many-to-one name="Parent" 
								 class="Campaign"
								 access="property"
								 not-null="true"
								 foreign-key="FK_OutboundCampaignWorking_OutboundCampaignWorkingPeriod"/>

		<set name="CampaignWorkingPeriodAssignments">
			<key column="Id" not-null="true"/>
			<one-to-many class="CampaignWokringPeriodAssignment"/>
		</set>
		
		<component name="TimePeriod" class="Teleopti.Interfaces.Domain.TimePeriod, Teleopti.Interfaces">			
				<property name="StartTime"
									column="StartTime"
									not-null="true"
									type="TimeSpan" />
				<property name="EndTime"
									column="EndTime"
									not-null="true"
									type="TimeSpan" />			
		</component>		
	</class>	
</hibernate-mapping>