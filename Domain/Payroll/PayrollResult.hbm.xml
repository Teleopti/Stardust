<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Payroll"
                   default-access="field.camelcase-underscore">
  <class name="PayrollResult">
    <!--IEntity-->
    <id name="Id"
				type="guid"
		  access="nosetter.camelcase-underscore"
				unsaved-value="null">
      <generator class="guid.comb" />
    </id>

    <version name="Version"
		 unsaved-value ="null"/>
    <many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 foreign-key="FK_PayrollResult_Person_UpdatedBy"/>
    <property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>

    <!--IEntity-->

    <property name="PayrollFormatName"
            type="string"
            length="50"
            not-null="true"/>

    <property name="FinishedOk"
              not-null="true"/>
    
    
    <property name="PayrollFormatId"
          type="guid"
          not-null="true"
            />

    <many-to-one name="Owner"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true" foreign-key="FK_PayrollResult_Person_Owner"/>

    <component name="Period"
                   class="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.DateOnlyPeriod, Teleopti.Ccc.Domain">
      <component class ="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.MinMax`1[Teleopti.Ccc.Domain.InterfaceLegacy.Domain.DateOnly, Teleopti.Ccc.Domain], Teleopti.Ccc.Domain"
                        name="period" access="field">
        <property name="Minimum"
          not-null="true"
           type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"/>
        <property name="Maximum"
            not-null="true"
            type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"/>
      </component>

    </component>

    <property name="Timestamp"
          not-null="true"
           type="UtcDateTime"/>

    <many-to-one name="XmlResult"
					      unique="true"
                 class="XmlResult"
					      cascade="all-delete-orphan"
                not-null="true"/>

    
    <bag name="Details"
				 cascade="all-delete-orphan"
		 inverse="true">
      <key column="Parent" />
      <one-to-many class="PayrollResultDetail"/>
    </bag>
    
    <many-to-one name="PayrollExport"
					 class="Teleopti.Ccc.Domain.Payroll.PayrollExport"
					 not-null="false" 
           foreign-key="FK_PayrollResult_PayrollExport"/>
    <many-to-one name="BusinessUnit"
      class="Teleopti.Ccc.Domain.Common.BusinessUnit"
      access="nosetter.camelcase-underscore"
      not-null="true" foreign-key="FK_PayrollResult_BusinessUnit"/>
    <filter name="businessUnitFilter"
        condition=":businessUnitParameter = BusinessUnit" />

    
  </class>
</hibernate-mapping>

