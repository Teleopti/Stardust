<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.RealTimeAdherence"
                   default-access="field.camelcase-underscore">
  
	<class name="RtaState">
		<!--IEntity-->
		<id name="Id"
				type="guid"
				unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		<!--IEntity-->

			<property name="Name"
					  not-null="true"
					  type="string"
					  length="50"/>
    <property name="StateCode"
					  not-null="true"
					  type="string"
					  length="25"/>
    <property name="PlatformTypeId"
					  not-null="true"
					  type="guid"/>
    <many-to-one class="RtaStateGroup"
                 name="Parent"
                 not-null="true" foreign-key="FK_RtaState_RtaStateGroup"/>
	</class>
</hibernate-mapping>
