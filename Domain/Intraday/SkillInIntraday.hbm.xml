<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Teleopti.Ccc.Domain"
				   namespace="Teleopti.Ccc.Domain.Intraday"
				   default-access="field.camelcase-underscore">
	<class name="SkillInIntraday" table="Skill">
		<!--IEntity-->
		<id name="Id"
				type="guid"
			 access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		<!--IEntity-->

		<property name="Name"/>
		<property name="IsDeleted"/>
  </class>

	<query name="loadIntradaySkillsWithAtLeastOneQueue">
		<![CDATA[
select distinct s.Id as "Id", s.Name as "Name", s.IsDeleted as "IsDeleted" from Skill s
	inner join s.WorkloadCollection wl
	inner join wl.QueueSourceCollection
order by s.Name
]]>
	</query>

</hibernate-mapping>
