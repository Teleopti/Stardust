<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.AgentInfo.Requests"
                   default-access="field.camelcase-underscore">
  <joined-subclass name="AbsenceRequest"
					extends="Request">
    <key column="Request" foreign-key="FK_AbsenceRequest_Request"/>
    
    <many-to-one name="Absence"
                 class="Teleopti.Ccc.Domain.Scheduling.Absence"
                 not-null="true" foreign-key="FK_AbsenceRequest_Absence" />

    <bag name="PersonAbsences" inverse="true">
      <key column="AbsenceRequest"></key>
      <one-to-many class="Teleopti.Ccc.Domain.Scheduling.PersonAbsence" />
    </bag>

  </joined-subclass>
</hibernate-mapping>
