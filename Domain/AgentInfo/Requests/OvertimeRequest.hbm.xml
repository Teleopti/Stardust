<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.AgentInfo.Requests"
									 default-access="field.camelcase-underscore">
	<joined-subclass name="OvertimeRequest"
					extends="Request">
		<key column="Request" foreign-key="FK_OvertimeRequest_Request"/>
		
		<many-to-one name="Activity"
								 class="Teleopti.Ccc.Domain.Scheduling.Activity"
								 not-null="true" foreign-key="FK_OvertimeRequest_Activity" />

		<property name="OvertimeType"
						 type="int"
						 not-null="true"/>
	</joined-subclass>
</hibernate-mapping>
