<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.AgentInfo.Requests"
                   default-access="field.camelcase-underscore">

  <class name="ShiftTradeSwapDetail">
    <!--IEntity-->
    <id name="Id"
            type="guid"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <!--IEntity-->
    <many-to-one class="Teleopti.Ccc.Domain.AgentInfo.Requests.ShiftTradeRequest"
              name ="Parent"
              not-null="true" foreign-key="FK_ShiftTradeSwapDetail_ShiftTradeRequest"/>

    <many-to-one name="PersonFrom"
                class="Teleopti.Ccc.Domain.Common.Person"
                not-null="true" foreign-key="FK_ShiftTradeSwapDetail_PersonFrom"/>

    <many-to-one name="PersonTo"
                class="Teleopti.Ccc.Domain.Common.Person"
                not-null="true" foreign-key="FK_ShiftTradeSwapDetail_PersonTo"/>

    <property name="DateFrom"
         not-null="true"
         type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"/>

    <property name="DateTo"
         not-null="true"
         type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"/>

    <property name="ChecksumFrom"
         not-null="true"
         type="long"/>

    <property name="ChecksumTo"
         not-null="true"
         type="long"/>
  </class>
</hibernate-mapping>