<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Teleopti.Ccc.Domain"
				   namespace="Teleopti.Ccc.Domain.SystemSettingWeb.BankHolidayCalendar"
				   default-access="field.camelcase-underscore">

	<class name="BankHolidayCalendar" table="BankHolidayCalendar">
		<id name="Id"
			type="guid"
			access="nosetter.camelcase-underscore"
			unsaved-value="null">
			<generator class="guid.comb"/>
		</id>

		<property name="Name"
				  access="property"
				  type="string"
				  length="250"
				  not-null="true"/>

		<set name="Dates" table="BankHolidayDates" cascade="all-delete-orphan" lazy="false" sort="natural">
			<key column="Parent"/>
			<element column="Date" type="System.DateTime"/>
		</set>

		<many-to-one name="BusinessUnit"
					 class="Teleopti.Ccc.Domain.Common.BusinessUnit"
					 access="nosetter.camelcase-underscore"
					 not-null="true"/>

		<many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"/>

		<property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>

		<property name="IsDeleted"
				  type="boolean"
				  not-null="true"/>

		<filter name="businessUnitFilter"
				condition=":businessUnitParameter = BusinessUnit" />
		<filter name="deletedFlagFilter"
				condition="IsDeleted = 0" />
	</class>
</hibernate-mapping>
