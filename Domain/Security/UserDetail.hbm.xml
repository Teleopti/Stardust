<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Security"
                   default-access="field.camelcase-underscore">

  <class name="UserDetail">
    <!--IEntity-->
    <id name="Id"
            type="guid"
		  access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <!--IEntity-->
    <property name="LastPasswordChange"
              type="UtcDateTime"
              not-null="true"/>
    <property name="InvalidAttemptsSequenceStart"
              type="UtcDateTime"
              not-null="true"/>
    <property name="IsLocked"
              type="bool"
              not-null="true"/>
    <property name="InvalidAttempts"
              type="int"
              not-null="true"/>
    <many-to-one name="Person"
                 class="Teleopti.Ccc.Domain.Common.Person"
                 not-null="true"
                 foreign-key="FK_UserDetail_Person" unique-key="UserDetailPersonUnique"/>
  </class>
</hibernate-mapping>