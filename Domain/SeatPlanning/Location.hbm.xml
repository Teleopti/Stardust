<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.SeatPlanning"
									 default-access="field.camelcase-underscore">

	<class name="Location" table="SeatMapLocation">
		<!--IEntity-->
		<id name="Id"
						type="guid"
							access="nosetter.camelcase-underscore"
						unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		
		<property name="Name"
							access="property"
							type="string"
							length="100"
							not-null="true"/>
		
		<many-to-one class="SeatMap"
								 access="property"
							name ="Parent" 
							not-null="false" foreign-key="FK_SeatMapLocation_SeatMap"/>

		<bag name="ChildLocations" cascade="all" lazy="false" inverse="true">
			<key column="ParentLocation" />
			<one-to-many class="Teleopti.Ccc.Domain.SeatPlanning.Location" />
		</bag>
		
		<bag name="Seats" cascade="all-delete-orphan" lazy="false" inverse="true">
			<key column="Parent" />
			<one-to-many class="Teleopti.Ccc.Domain.SeatPlanning.Seat" />
		</bag>

		<many-to-one name="ParentLocation" column="ParentLocation" access="property" />
		
	</class>
	
</hibernate-mapping>
