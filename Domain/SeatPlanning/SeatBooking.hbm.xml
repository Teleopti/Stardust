<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.SeatPlanning"
									 default-access="field.camelcase-underscore">

	<class name="SeatBooking" table="SeatBooking">

		<id name="Id"
						type="guid"
							access="nosetter.camelcase-underscore"
						unsaved-value="null">
			<generator class="guid.comb" />
		</id>

		<property name="BelongsToDate"
					 access="property"
					 type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"
					 not-null="true"
					 insert="true"
					 update="false"/>
		
		<property name="StartDateTime"
								type="UtcDateTime"
								not-null="true"/>

		<property name="EndDateTime"
								type="UtcDateTime"
								not-null="true"/>

		<many-to-one class="Seat"
							access="property"
							name ="Seat"
							cascade="none"
							not-null="true" foreign-key="FK_SeatBooking_Seat"/>

		<many-to-one name ="Person"
							class="Teleopti.Ccc.Domain.Common.Person"
							access="property"
							not-null="false" foreign-key="FK_SeatBooking_Person"/>

		<many-to-one name="UpdatedBy"
								 class="Teleopti.Ccc.Domain.Common.Person"
								 not-null="true"
								 foreign-key="FK_SeatBooking_Person_UpdatedBy"/>

		<property name="UpdatedOn"
								type="UtcDateTime"
								not-null="true"/>
		
		<many-to-one name="BusinessUnit"
					class="Teleopti.Ccc.Domain.Common.BusinessUnit"
					access="nosetter.camelcase-underscore"
					not-null="true" foreign-key="FK_SeatBooking_BusinessUnit"/>
		<filter name="businessUnitFilter"
						condition=":businessUnitParameter = BusinessUnit" />

	</class>

</hibernate-mapping>
