<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.SeatPlanning"
									 default-access="field.camelcase-underscore">

	<class name="Seat" table="Seat">

		<id name="Id"
							type="guid"
							access="nosetter.camelcase-underscore">
		</id>

		<property name="Name"
							access="property"
							type="string"
							length="100"
							not-null="true"/>

		<property name="Priority"
							access="property"
							type="Int32"
							not-null="true"/>

		<many-to-one class="SeatMapLocation"
							access="property"
							name ="Parent"
							not-null="false" foreign-key="FK_Seat_SeatMapLocation"/>

		<bag name="Roles" table="ApplicationRolesForSeat" cascade="none">
			<key column="Seat"/>
			<many-to-many column="ApplicationRole" class="Teleopti.Ccc.Domain.Security.AuthorizationEntities.ApplicationRole"/>
		</bag>
		
	</class>

</hibernate-mapping>
