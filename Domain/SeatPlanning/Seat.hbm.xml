<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.SeatPlanning"
									 default-access="field.camelcase-underscore">

	<class name="Seat" table="Seat">

		<id name="Id"
							type="guid"
							access="nosetter.camelcase-underscore"
							unsaved-value="null">
		</id>

		<property name="Name"
							access="property"
							type="string"
							length="100"
							not-null="true"/>

		<property name="Priority"
							access="property"
							type="Int32"
							not-null="true"/>

		<many-to-one class="Location"
							access="property"
							name ="Parent"
							not-null="false" foreign-key="FK_Seat_SeatMapLocation"/>

	</class>

</hibernate-mapping>
