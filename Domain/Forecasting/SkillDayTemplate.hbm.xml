<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Forecasting"
                   default-access="field.camelcase-underscore">
	<class name="SkillDayTemplate">
		<!--IEntity-->
		<id name="Id"
				type="guid"
			 access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb" />
		</id>

    <many-to-one name="Parent"
                 class="Skill" 
                 not-null ="true" foreign-key="FK_SkillDayTemplate_Skill"/>

    <property name="WeekdayIndex"
              type="int"
              not-null="true"
              access="property"/>

    <!--IEntity-->
    <property name="Name"
              type="string"
              length="50"
              not-null="true"/>

    <bag name="TemplateSkillDataPeriodCollection"
				 cascade="all-delete-orphan"
				 inverse="true">
			<key column="Parent" />
			<one-to-many class="Teleopti.Ccc.Domain.Forecasting.Template.TemplateSkillDataPeriod"/>
		</bag>

    <property name="VersionNumber"
      type="int"
      not-null="true"
      access="property"/>

    <property name ="UpdatedDate"
      type="UtcDateTime"
      not-null="true"/>
    
		</class>
</hibernate-mapping>
