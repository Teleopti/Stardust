<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Forecasting"
                   default-access="field.camelcase-underscore">
  <class name="MultisiteDayTemplate">
    <!--IEntity-->
    <id name="Id" access="nosetter.camelcase-underscore"
				type="guid"
				unsaved-value="null">
      <generator class="guid.comb" />
    </id>

    <many-to-one name="Parent"
              class="Skill"
                 foreign-key="FK_MultisiteDayTemplate_Skill"/>

    <!--IEntity-->
    <property name="Name"
              type="string"
              length="50"
              not-null="true"/>

    <bag name="TemplateMultisitePeriodCollection"
				 cascade="all-delete-orphan"
				 inverse="true">
      <key column="Parent" />
      <one-to-many class="Teleopti.Ccc.Domain.Forecasting.Template.TemplateMultisitePeriod"/>
    </bag>

    <property name="WeekdayIndex"
          type="int"
          not-null="true"
          access="property"/>

    <property name="VersionNumber"
      type="int"
      not-null="true"
      access="property"/>

    <property name ="UpdatedDate"
      type="UtcDateTime"
      not-null="true"/>
    
  </class>
</hibernate-mapping>
