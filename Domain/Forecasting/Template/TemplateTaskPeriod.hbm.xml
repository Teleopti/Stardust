<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Forecasting.Template"
                   default-access="field.camelcase-underscore">
  <class name="TemplateTaskPeriod" >
    <id name="Id"
          type="guid"
		  access="nosetter.camelcase-underscore"
          unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <many-to-one class="Teleopti.Ccc.Domain.Forecasting.WorkloadDayBase"
                 name="Parent"
                 not-null="true" foreign-key="FK_TemplateTaskPeriod_WorkloadDayBase"/>
    <component name="Task"
               class="Teleopti.Ccc.Domain.Forecasting.Task">
      <property name="Tasks"
          not-null="true"
          type="Double" />
      <property name="AverageTaskTime"
          type="TimeSpan"
          not-null="true"/>

      <property name="AverageAfterTaskTime"
            type="TimeSpan"
            not-null="true"/>
    </component>
    <component name="Campaign"
               class="Teleopti.Ccc.Domain.Forecasting.Campaign">
      <component name="CampaignTasksPercent"
          class="Teleopti.Interfaces.Domain.Percent, Teleopti.Interfaces">
        <property name="Value"
                  type="double"
                  not-null="true"
                  column="CampaignTasks"/>
      </component>
      <component name="CampaignTaskTimePercent"
          class="Teleopti.Interfaces.Domain.Percent, Teleopti.Interfaces">
        <property name="Value"
                  type="double"
                  not-null="true"
                  column="CampaignTaskTime"/>
      </component>
      <component name="CampaignAfterTaskTimePercent"
              class="Teleopti.Interfaces.Domain.Percent, Teleopti.Interfaces">
        <property name="Value"
                  type="double"
                  not-null="true"
                  column="CampaignAfterTaskTime"/>
      </component>
    </component>
    <component name="Period"
               class="Teleopti.Interfaces.Domain.DateTimePeriod, Teleopti.Interfaces">
      <component class ="Teleopti.Interfaces.Domain.MinMax`1[System.DateTime], Teleopti.Interfaces"
                        name="period" access="field">
        <property name="Minimum"
          not-null="true"
           type="UtcDateTime"/>
        <property name="Maximum"
            not-null="true"
            type="UtcDateTime"/>
      </component>

    </component>
		<property name="OverrideTasks"
				  type="Double"
				  not-null="false" />
  </class>
</hibernate-mapping>

