<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Forecasting.Template"
                   default-access="field.camelcase-underscore">
	<class name="TemplateMultisitePeriod">
		<!--IEntity-->
		<id name="Id"
					type="guid"
			 access="nosetter.camelcase-underscore"
					unsaved-value="null">
			<generator class="guid.comb" />
		</id>

    <version name="Version"
				 unsaved-value ="null"/>
    
    <many-to-one class="Teleopti.Ccc.Domain.Forecasting.MultisiteDayTemplate"
             name="Parent"
             not-null="true" foreign-key="FK_TemplateMultisitePeriod_MultisiteDayTemplate"/>
		<!--IEntity-->

    <component name="Period" class="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.DateTimePeriod, Teleopti.Ccc.Domain">
      <component name="period" access="field">
        <property name="Minimum"
				  column="StartDateTime"
					  not-null="true"
					  type="UtcDateTime" />
        <property name="Maximum"
				column="EndDateTime"
				  not-null="true"
					  type="UtcDateTime"  />
      </component>
    </component>

    <map name="Distribution"
          table="TemplateMultisitePeriodDistribution"
          cascade="all-delete-orphan"
          lazy="false">
      <key column="Parent" foreign-key="FK_TemplateMultisitePeriodDistribution_TemplateMultisitePeriod"/>
      <index-many-to-many column="ChildSkill" class="Teleopti.Ccc.Domain.Forecasting.ChildSkill" foreign-key="FK_TemplateMultisitePeriodDistribution_ChildSkill"/>
      <composite-element class="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.Percent, Teleopti.Ccc.Domain">
        <property name="Value"
              not-null="true"
              type="Double" />
      </composite-element>
    </map>
    
	</class>

</hibernate-mapping>
