<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Forecasting"
                   default-access="field.camelcase-underscore">
  <class name="SkillDay">
    <!--IEntity-->
    <id name="Id"
				type="guid"
		  access="nosetter.camelcase-underscore"
				unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <version name="Version"
				 unsaved-value ="null"/>
    <many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 foreign-key="FK_SkillDay_Person_UpdatedBy"/>
    <property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>
    <!--IEntity-->

    <component name="TemplateReference" class="Teleopti.Ccc.Domain.Forecasting.Template.SkillDayTemplateReference">
      <property name="TemplateName"
					not-null="false"
					type="string"
					length="50"/>
      <property name="TemplateId"
					not-null="true"
					type="guid"/>
      <property name="DayOfWeek"
					not-null="false"/>
      <property name="VersionNumber"
          type="int"
          not-null="true"
          access="property"/>
      <property name ="UpdatedDate"
          type="UtcDateTime"
          not-null="true"/>
      <many-to-one name="Skill"
                   column="TemplateReferenceSkill"
                   class="Skill"
                   not-null="false"
             foreign-key="FK_SkillDayTemplateReference_Skill"/>
    </component>

    <property name="CurrentDate"
              column="SkillDayDate"
				  type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"
				  not-null="true"
          unique-key="Unique_SkillDay"/>
    <many-to-one class="Skill"
                 name="Skill"
                 not-null="true"
                 unique-key="Unique_SkillDay" foreign-key="FK_SkillDay_Skill"/>
    <many-to-one class="Teleopti.Ccc.Domain.Common.Scenario"
                 name="Scenario"
                 not-null="true"
                 unique-key="Unique_SkillDay" foreign-key="FK_SkillDay_Scenario"/>

    <bag name="WorkloadDayCollection"
				 cascade="all-delete-orphan"
		 inverse="true">
      <key column="Parent" />
      <one-to-many class="WorkloadDay"/>
    </bag>
    <bag name="SkillDataPeriodCollection"
				 cascade="all-delete-orphan"
				 inverse="true">
      <key column="Parent" />
      <one-to-many class="SkillDataPeriod"/>
    </bag>
    <many-to-one name="BusinessUnit"
      class="Teleopti.Ccc.Domain.Common.BusinessUnit"
      access="nosetter.camelcase-underscore"
      not-null="true" foreign-key="FK_SkillDay_BusinessUnit"/>

    <filter name="businessUnitFilter"
        condition=":businessUnitParameter = BusinessUnit" />

  </class>

	<sql-query name="SkillTaskDetails">
		<![CDATA[
		select 
				s.Name,
				ttp.Minimum,
				ttp.Maximum,
				sdb.Scenario,
				s.Id as SkillId,
				sum((ttp.Tasks * CampaignTasks + ttp.Tasks)) as TotalTasks
		from 
				skill s 
				left join SkillDay sdb on (s.Id=sdb.Skill) and (sdb.SkillDayDate between :startDate and :endDate) and (sdb.Scenario = :scenario) 
				left join WorkloadDay wld on (wld.Parent = sdb.Id) 
				and (wld.TemplateName is null OR wld.TemplateName <> :longTermKey)
				left join WorkloadDayBase wldb on wld.WorkloadDayBase = wldb.Id
				left join TemplateTaskPeriod ttp on ttp.parent = wldb.id
		where 
				s.IsDeleted = 0
				and ttp.Minimum >= :startDate 
				and ttp.Maximum <= :endDate
		group by 
		s.Name,
				ttp.Minimum,
				ttp.Maximum,
				sdb.Scenario,
				s.Id 
    ]]>
		<query-param name="scenario" type="Teleopti.Ccc.Domain.Common.Scenario"/>
		<query-param name="onDate" type="datetime"/>
		<query-param name="startDate" type="datetime"/>
		<query-param name="endDate" type="datetime"/>
		<query-param name="longtermKey" type="string"/>
	</sql-query>
	
</hibernate-mapping>
