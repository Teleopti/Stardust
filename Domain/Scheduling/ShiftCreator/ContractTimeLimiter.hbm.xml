<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.ShiftCreator"
                   default-access="field.camelcase-underscore">
  <union-subclass name="ContractTimeLimiter"
                  extends="WorkShiftLimiter">
    <component name="TimeLimit" class="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.TimePeriod, Teleopti.Ccc.Domain">
      <component name="period" access="field">
        <property name="Minimum"
                  column="MinimumLength"
                  not-null="true"
                  type="TimeSpan" />
        <property name="Maximum"
                  column="MaximumLength"
                  not-null="true"
                  type="TimeSpan" />
      </component>
    </component>

    <property name="LengthSegment"
              column="LengthSegment"
        not-null="true"
              type="TimeSpan"/>
  </union-subclass>
</hibernate-mapping>
