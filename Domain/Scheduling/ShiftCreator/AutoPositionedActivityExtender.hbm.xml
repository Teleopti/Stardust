<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.ShiftCreator"
                   default-access="field.camelcase-underscore">

  <subclass name="AutoPositionedActivityExtender"
            discriminator-value="AutoPos"
            extends="ActivityExtender">
    <property name="NumberOfLayers"
              type="byte"/>
    <property name="StartSegment"
              column="AutoPosStartSegment"
              type="TimeSpan"/>
    <property name="AutoPositionIntervalSegment"
              column="AutoPosIntervalSegment"
              type="TimeSpan"/>
  </subclass>
</hibernate-mapping>