<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.ShiftCreator"
                   default-access="field.camelcase-underscore">
  
  <union-subclass name="ActivityTimeLimiter"
                  extends="WorkShiftLimiter">
 

	  <property name="TimeLimit"
				   column="TimeLimit"
				   not-null="true"
				   type="TimeSpan"/>

    <many-to-one name="Activity"
              class="Teleopti.Ccc.Domain.Scheduling.Activity"
              not-null="true" foreign-key="FK_ActivityTimeLimiter_Activity"/>

    <property name="TimeLimitOperator"
         not-null="true" />
  </union-subclass>
	  
</hibernate-mapping>
