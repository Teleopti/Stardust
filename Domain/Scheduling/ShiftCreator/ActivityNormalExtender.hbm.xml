<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.ShiftCreator"
                   default-access="field.camelcase-underscore">
  <subclass name="ActivityNormalExtender"
            extends="ActivityExtender">
    <component name="ActivityPositionWithSegment" class="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.TimePeriodWithSegment">
      <component name="Period" class="Teleopti.Interfaces.Domain.TimePeriod, Teleopti.Interfaces">
        <component name="period" access="field">
          <property name="Minimum"
                    column="EarlyStart"
                    type="TimeSpan" />
          <property name="Maximum"
                    column="LateStart"
                    type="TimeSpan" />
        </component>
      </component>
      <property name="Segment"
                column="StartSegment"
                type="TimeSpan"/>
    </component>
    <subclass name="ActivityAbsoluteStartExtender"
                    discriminator-value="AbsoluteStart"/>
    <subclass name="ActivityRelativeEndExtender"
                    discriminator-value="RelativeEnd"/>
    <subclass name="ActivityRelativeStartExtender"
                    discriminator-value="RelativeStart"/>

  </subclass>
</hibernate-mapping>