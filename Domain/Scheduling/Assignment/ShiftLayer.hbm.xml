<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.Assignment"
                   default-access="field.camelcase-underscore">
	<class name="ShiftLayer" abstract="true">
		<id name="Id"
				type="guid"
				access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		<discriminator column="LayerType" 
							not-null="true"/>
		<many-to-one class="Teleopti.Ccc.Domain.Scheduling.Activity"
				 name="Payload"
				 not-null="true"
				 foreign-key="FK_MainShiftActivityLayer_Activity"
				 access="property"/>
		<component name="Period"
					  class="Teleopti.Ccc.Domain.InterfaceLegacy.Domain.DateTimePeriod, Teleopti.Ccc.Domain"
					  access="property">
			<component name="period" access="field">
				<property name="Minimum"
							not-null="true"
							type="UtcDateTime" />
				<property name="Maximum"
							not-null="true"
							type="UtcDateTime"/>
			</component>
		</component>
		<many-to-one name="Parent"
						 class="PersonAssignment"
						 not-null ="true"
						 foreign-key="PersonAssignment"/>
		<property name="OrderIndex"
					 access="readonly"
					 not-null ="true" />
	</class>
</hibernate-mapping>