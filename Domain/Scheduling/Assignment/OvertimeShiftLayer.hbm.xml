<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.Scheduling.Assignment"
									 default-access="field.camelcase-underscore">
	<class name="OvertimeShiftLayer" table="OvertimeShiftActivityLayer">
		<id name="Id"
			 access="nosetter.camelcase-underscore"
						type="guid"
						unsaved-value="null">
			<generator class="guid.comb" />
		</id>

		<many-to-one class="Teleopti.Ccc.Domain.Scheduling.Activity"
						name="Payload"
						not-null="true"
						foreign-key="FK_OvertimeShiftActivityLayer_Activity"
						access="property"/>
		<component name="Period" class="Teleopti.Interfaces.Domain.DateTimePeriod, Teleopti.Interfaces" access="property">
			<component name="period" access="field">
				<property name="Minimum"
						not-null="true"
						type="UtcDateTime" />
				<property name="Maximum"
						not-null="true"
						type="UtcDateTime"  />
			</component>
		</component>
		<many-to-one name="DefinitionSet"
								class="Teleopti.Ccc.Domain.Scheduling.TimeLayer.MultiplicatorDefinitionSet"
								not-null="true"
								foreign-key="FK_OvertimeShiftActivityLayer_DefinitionSet" 
								access="property"/>
		<many-to-one name="Parent"
								 class="PersonAssignment"
								 not-null ="true" 
								 foreign-key="FK_OvertimeShiftActivityLayer_PersonAssignment"/>
		<property name="OrderIndex"
							access="readonly"
							not-null ="true" />
	</class>
</hibernate-mapping>

