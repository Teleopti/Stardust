<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.Assignment"
                   default-access="field.camelcase-underscore">
  <class name="PersonalShift">
    <id name="Id"
            type="guid"
		  access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>

    <list name="LayerCollection"
			  cascade="all-delete-orphan"
          inverse="true">
		<key column="Parent" on-delete="cascade" />
		<index type="Byte" column ="OrderIndex" />
      <one-to-many class="PersonalShiftActivityLayer"/>
    </list>
    <many-to-one name="Parent" 
             class ="PersonAssignment"
             not-null="true" foreign-key="FK_PersonalShift_PersonAssignment"/>
    <property name="OrderIndex"
              access="readonly"
              not-null ="true" />
  </class>


</hibernate-mapping>

