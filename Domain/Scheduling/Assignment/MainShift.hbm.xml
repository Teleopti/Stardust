<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.Assignment"
                   default-access="field.camelcase-underscore">
  <class name="MainShift">
    <id name="Id"
            type="guid"
		  access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="foreign">
        <param name ="property">Parent</param>
      </generator>
    </id>

    <list name="LayerCollection"
				cascade="all-delete-orphan"
				inverse="true">
      <key column="Parent" on-delete="cascade" />
      <index type="Byte" column ="OrderIndex" />
      <one-to-many class="MainShiftActivityLayer"/>
    </list>
    <one-to-one name ="Parent"
                class="PersonAssignment"
                constrained="true"
                foreign-key="FK_MainShift_PersonAssignment"/>

    <many-to-one name="ShiftCategory"
              class="Teleopti.Ccc.Domain.Scheduling.ShiftCategory"
              not-null="true" foreign-key="FK_MainShift_ShiftCategory"/>
  </class>
  
</hibernate-mapping>
