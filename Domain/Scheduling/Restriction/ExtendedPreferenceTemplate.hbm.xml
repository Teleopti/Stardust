<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.Restriction"
                   default-access="field.camelcase-underscore">
  <class name="ExtendedPreferenceTemplate"
         batch-size="10">
    <!--IEntity-->
    <id name="Id"
		  access="nosetter.camelcase-underscore"
				type="guid"
				unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 foreign-key="FK_ExtendedPreferenceTemplate_Person_UpdatedBy" />
    <property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>
    <!--IEntity-->

    <property name="Name"
                not-null="true"
                length="50"/>
    
    <property name="DisplayColor"
				  type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.ColorNumber, Teleopti.Ccc.Infrastructure"
				  not-null="true"/>

    <one-to-one  name="Restriction"
                  class="PreferenceRestrictionTemplate"
                  cascade ="all-delete-orphan"/>

    <many-to-one class="Teleopti.Ccc.Domain.Common.Person"
              name ="Person"
              not-null="true" foreign-key="FK_ExtendedPreferenceTemplate_Person"/>

  </class>
</hibernate-mapping>