<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Scheduling.Restriction"
                   default-access="field.camelcase-underscore">
  <typedef name="PosTimeSpanType" class="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.PositiveTimeSpanOrNullMappingType, Teleopti.Ccc.Infrastructure"/>
  <class name="StudentAvailabilityRestriction">
    <id name="Id"
            type="guid"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>

    <component  name="StartTimeLimitation" class="Teleopti.Interfaces.Domain.StartTimeLimitation, Teleopti.Interfaces">
      <property name="StartTime" column="StartTimeMinimum" type ="PosTimeSpanType" />
      <property name="EndTime" column="StartTimeMaximum" type ="PosTimeSpanType" />
    </component>

    <component name="EndTimeLimitation" class="Teleopti.Interfaces.Domain.EndTimeLimitation, Teleopti.Interfaces">
      <property name="StartTime" column="EndTimeMinimum" type ="PosTimeSpanType" />
      <property name="EndTime" column="EndTimeMaximum" type ="PosTimeSpanType" />
    </component>

    <component name="WorkTimeLimitation" class="Teleopti.Interfaces.Domain.WorkTimeLimitation, Teleopti.Interfaces">
      <property name="StartTime" column="WorkTimeMinimum" type ="PosTimeSpanType" />
      <property name="EndTime" column="WorkTimeMaximum" type ="PosTimeSpanType" />
    </component>

    <many-to-one name="Parent"
                 class="Teleopti.Ccc.Domain.Scheduling.Restriction.StudentAvailabilityDay"
                 not-null ="false" foreign-key="FK_StudentAvailabilityDay_AvailabilityRestriction"/>
    
    <property name="Index"
             access="readonly"
             column="RestrictionIndex"
             not-null="true"/>
  </class>
</hibernate-mapping>
