<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Teleopti.Ccc.Domain" 
                   namespace="Teleopti.Ccc.Domain.Scheduling.Restriction"
                   default-access="field.camelcase-underscore">
  <class name="AvailabilityDay">
    <!--IUnique-->
    <id name="Id"
            type="guid"
		  access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <!--IUnique-->
    
    <many-to-one name="Parent"
                 class="Teleopti.Ccc.Domain.Scheduling.Restriction.AvailabilityRotation"  
                 not-null ="true" foreign-key="FK_AvailabilityDayNew_Rotation"/>
    <one-to-one name="Restriction"
                class="AvailabilityRestriction"
                cascade="all-delete-orphan"/>
                    
    <property name="Index"
                 access="readonly"
                 column="Day"
                 not-null="true"/>
  </class>
         
</hibernate-mapping>
