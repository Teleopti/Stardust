<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Teleopti.Ccc.Domain" 
                   namespace="Teleopti.Ccc.Domain.Scheduling.Meetings"
                   default-access="field.camelcase-underscore">
  <class name="MeetingPerson">
    <!--IUnique-->
    <id name="Id"
            type="guid"
		  access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <!--IUnique-->
    
    <many-to-one class="Teleopti.Ccc.Domain.Common.Person"
                 name="Person"
                 not-null="true" 
                 foreign-key="FK_MeetingPerson_Person"/>
    
    <many-to-one name="Parent"
                 class="Meeting"  
                 not-null ="true" foreign-key="FK_MeetingPerson_Meeting"/>
    <property name="Optional"
          type="boolean"
          not-null ="true" />
  </class>
         
</hibernate-mapping>
