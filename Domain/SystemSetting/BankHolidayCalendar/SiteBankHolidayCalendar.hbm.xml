<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.SystemSetting"
                   default-access="field.camelcase-underscore">

	<class name="SiteBankHolidayCalendar">
		<!--IEntity-->
		<id name="Id"
				type="guid"
							access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		<many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 foreign-key="FK_SiteBankHolidayCalendar_Person_UpdatedBy"/>
		<property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>
		<!--IEntity-->

		<many-to-one name="Site"
				   class="Teleopti.Ccc.Domain.Common.Site"
				   foreign-key="FK_SiteBankHolidayCalendar_Site"
					not-null="true" />

		<bag name="BankHolidayCalendarsForSite"
			 cascade="all-delete-orphan"
			 order-by="Parent"
			 lazy="true">
			<key column="Parent" foreign-key="FK_BankHolidayCalendarsForSite_SiteBankHolidayCalendar"/>
			<many-to-many column="BankHolidayCalendar" class="Teleopti.Ccc.Domain.SystemSetting.BankHolidayCalendar"/>
		</bag>

		<many-to-one name="BusinessUnit"
			  class="Teleopti.Ccc.Domain.Common.BusinessUnit"
			  access="nosetter.camelcase-underscore"
			  not-null="true"
			  foreign-key="FK_SiteBankHolidayCalendar_BusinessUnit"/>
		<filter name="businessUnitFilter"
			condition=":businessUnitParameter = BusinessUnit" />

	</class>
</hibernate-mapping>