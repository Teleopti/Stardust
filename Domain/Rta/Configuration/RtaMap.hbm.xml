<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Rta.Configuration"
                   default-access="field.camelcase-underscore">
  
	<class name="RtaMap">
		<!--IEntity-->
		<id name="Id"
				type="guid"
			 access="nosetter.camelcase-underscore"
				unsaved-value="null">
			<generator class="guid.comb" />
		</id>
		<version name="Version"
				 unsaved-value ="null"/>
		<many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 foreign-key="FK_RtaMap_Person_UpdatedBy" />
		<property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>
		<!--IEntity-->

    <many-to-one name="Activity"
       class="Teleopti.Ccc.Domain.Scheduling.Activity"
       not-null="false" foreign-key="FK_RtaMap_Activity"/>

    <many-to-one name="StateGroup"
       class="Teleopti.Ccc.Domain.Rta.Configuration.RtaStateGroup"
       not-null="false" foreign-key="FK_RtaMap_RtaStateGroup"/>

    <many-to-one name="RtaRule"
       class="Teleopti.Ccc.Domain.Rta.Configuration.RtaRule"
       not-null="false" foreign-key="FK_RtaMap_RtaRule"/>
    
		<many-to-one name="BusinessUnit"
					 class="Teleopti.Ccc.Domain.Common.BusinessUnit"
            access="nosetter.camelcase-underscore" 
					 not-null="true" foreign-key="FK_RtaMap_BusinessUnit"/>

    <filter name="businessUnitFilter"
        condition=":businessUnitParameter = BusinessUnit" />
	</class>
</hibernate-mapping>
