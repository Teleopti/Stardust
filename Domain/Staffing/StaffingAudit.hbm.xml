<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Staffing"
                   default-access="field.camelcase-underscore"
				   schema="Auditing">

  <class name="StaffingAudit">
    <!--IEntity-->
    <id name="Id" type="guid" access="nosetter.camelcase-underscore" unsaved-value="null">
      <generator class="guid.comb" />
    </id>

    <!--IEntity-->

    <property name="TimeStamp"
			 access="property"
			 not-null="true"
			type="UtcDateTime" />

    <property name="Action"
			 access="property"
					not-null="true"
					length="255"
					type="string" />
	
     <property name="Area"
				access="property"
				not-null="true"
				length="255"
				type="string" />
	 
	  <property name="ImportFileName"
				access="property"
				not-null="false"
				length="500"
				type="string" />

	 <property name="BpoName"
				access="property"
				not-null="false"
			    length="100"
				type="string" />
	  
	  <property name="ClearPeriodStart"
				access="property"
				not-null="false"
				type="UtcDateTime" />
	  
	  <property name="ClearPeriodEnd"
				access="property"
				not-null="false"
				type="UtcDateTime" />

	  <property name="ActionPerformedById"
				access="property"
				not-null="true"
				type="guid" />

		<property name="ActionPerformedBy"
				access="property"
				not-null="false"
				length="300"
				type="string" />


	 
  </class>
<query name="StaffingAuditOnCriteria">
	<![CDATA[
Select s from StaffingAudit s
			where s.TimeStamp between :StartDate and :EndDate and :PersonId = s.ActionPerformedById order by s.TimeStamp

]]>
</query>
	<query name="PurgeStaffingAudit">
		<![CDATA[
DELETE from StaffingAudit
			where TimeStamp < : DaysBack

]]>
	</query>
</hibernate-mapping>