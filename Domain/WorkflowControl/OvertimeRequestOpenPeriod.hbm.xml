<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.WorkflowControl"
                   default-access="field.camelcase-underscore">
    <class name="OvertimeRequestOpenPeriod" abstract="true">
        <!--IUnique-->
        <id name="Id"
              access="nosetter.camelcase-underscore"
                type="guid"
                unsaved-value="null">
            <generator class="guid.comb" />
        </id>
        <!--IUnique-->

        <discriminator column="PeriodType" type="string" not-null="true"/>
        <property name="OrderIndex" access="readonly" not-null="true"/>
        <many-to-one name="Parent"
                     class="WorkflowControlSet"
                     not-null ="true"
                     foreign-key="FK_OvertimeRequestOpenPeriod_WorkflowControlSet"/>

        <property name="AutoGrantType" not-null ="true" />
        <property name="EnableWorkRuleValidation" not-null ="true" />
        <property name="WorkRuleValidationHandleType"/>
    </class>
</hibernate-mapping>
