<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Kpi"
                   default-access="field.camelcase-underscore">

  <class name="Scorecard">
    <!--IEntity-->
    <id name="Id"
            type="guid"
		  access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <version name="Version"
             unsaved-value ="null"/>
    <many-to-one name="UpdatedBy"
                 class="Teleopti.Ccc.Domain.Common.Person"
                 not-null="true"
                 foreign-key="FK_Scorecard_Person_UpdatedBy"/>
    <property name="UpdatedOn"
              type="UtcDateTime"
              not-null="true"/>

    <bag name="KeyPerformanceIndicatorCollection"
             inverse="false">
      <key foreign-key="FK_KeyPerformanceIndicatorCollection_Scorecard">
        <column name="Scorecard" 
                unique-key="ScorecardKpi" 
                not-null="true"/>
      </key>
      <many-to-many class="Teleopti.Ccc.Domain.Kpi.KeyPerformanceIndicator" foreign-key="FK_KeyPerformanceIndicator_KeyPerformanceIndicator">
        <column name="KeyPerformanceIndicator"
                unique-key="ScorecardKpi"
                not-null="true"/>
      </many-to-many>  
    </bag>
    
    <property name="Name"
				  type="string"
				  not-null="true" />
    <property name="Period"
              type="int"
              not-null="true" />
    <many-to-one name="BusinessUnit"
        class="Teleopti.Ccc.Domain.Common.BusinessUnit"
        access="nosetter.camelcase-underscore"
        not-null="true" foreign-key="FK_Scorecard_BusinessUnit"/>

    <filter name="businessUnitFilter"
        condition=":businessUnitParameter = BusinessUnit" />
    
  </class>
  
</hibernate-mapping>
