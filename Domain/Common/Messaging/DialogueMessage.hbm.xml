<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Common.Messaging"
                   default-access="field.camelcase-underscore">

	<class name="DialogueMessage">
		<id name="Id" type="guid" unsaved-value="null">
			<generator class="guid.comb" />
		</id>

		<property name="Created" not-null="true"/>
		<property name="Text"  not-null="true"/>
    
    <many-to-one  class=" Teleopti.Ccc.Domain.Common.Person"
                  name="Sender"
                  not-null ="true"
                  foreign-key="FK_DialogueMessage_Person_Sender"/>

    <many-to-one class="PushMessageDialogue" name="Parent" not-null ="true" foreign-key="FK_PushMessageDialogue_DialogueReply"/>
	</class>
</hibernate-mapping>