<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Common"
                   default-access="field.camelcase-underscore">
<class name="PersonWriteProtectionInfo"
		   batch-size="10">
		<!--IEntity-->
		<id name="Id" access="nosetter.camelcase-underscore"
				type="guid"
				unsaved-value="null">
      <generator class="foreign">
        <param name ="property">BelongsTo</param>
      </generator>
		</id>
		<!--IEntity-->
		<many-to-one name="CreatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 update="false" foreign-key="FK_WriteProtection_Person_CreatedBy"/>
		<many-to-one name="UpdatedBy"
					 class="Teleopti.Ccc.Domain.Common.Person"
					 not-null="true"
					 foreign-key="FK_WriteProtection_Person_UpdatedBy"/>
		<property name="CreatedOn"
				  type="UtcDateTime"
				  not-null="true"/>
		<property name="UpdatedOn"
				  type="UtcDateTime"
				  not-null="true"/>

  <one-to-one name="BelongsTo"
             class="Person"
              constrained="true"
             foreign-key="FK_WriteProtection_Person"/>
  <property name="PersonWriteProtectedDate"
              type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"/>
	</class>	
</hibernate-mapping>