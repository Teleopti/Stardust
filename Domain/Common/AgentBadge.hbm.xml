<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="Teleopti.Ccc.Domain"
									 namespace="Teleopti.Ccc.Domain.Common"
									 default-access="field.camelcase-underscore">

  <class name="AgentBadge">
	<cache usage ="read-write"/>
	<id name="Id"
			type="guid"
			access="nosetter.camelcase-underscore"
			unsaved-value="null">
	  <generator class="guid.comb" />
	</id>

	<many-to-one name ="Person"
				 class="Teleopti.Ccc.Domain.Common.Person"
				 column="Person"
				 not-null="true"
				 foreign-key="FK_AgentBadge_Person_Person"/>
	<property name="BronzeBadge"
						type="int"
						not-null="true" />

	<property name="SilverBadge"
						type="int"
						not-null="true" />

	<property name="GoldBadge"
						type="int"
						not-null="true" />

	<property name="BadgeType"
						type="int"
						not-null="true" />
	<property name="LastCalculatedDate"
						type="Teleopti.Ccc.Infrastructure.NHibernateConfiguration.DateOnlyMappingType, Teleopti.Ccc.Infrastructure"
						not-null="true" />
  </class>
</hibernate-mapping>