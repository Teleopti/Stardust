<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Teleopti.Ccc.Domain"
                   namespace="Teleopti.Ccc.Domain.Common"
                   default-access="field.camelcase-underscore">

  <class name="ContractScheduleWeek">
    <!--IEntity-->
    <id name="Id"
            type="guid"
		  				access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <!--IEntity-->
    <property name="WeekOrder"
              not-null="true" />
	  <map name="workDays" table="ContractScheduleWeekWorkDays" access="field" cascade="all-delete-orphan">
		  <key column="ContractScheduleWeek" foreign-key="FK_ContractScheduleWeekWorkDays_ContractScheduleWeek"/>
		  <index column="DayOfWeek" type="System.DayOfWeek" />
		  <element column="WorkDay" type="boolean" />
	  </map>

    <many-to-one class="ContractSchedule"
             name ="Parent"
             not-null="true" foreign-key="FK_ContractScheduleWeek_ContractSchedule"/>    
    
  </class>
</hibernate-mapping>