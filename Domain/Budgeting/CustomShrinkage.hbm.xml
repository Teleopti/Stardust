<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="Teleopti.Ccc.Domain" 
                   namespace="Teleopti.Ccc.Domain.Budgeting"
                   default-access="field.camelcase-underscore">
  <class name="CustomShrinkage">
    <!--IUnique-->
    <id name="Id"
            type="guid"
		  				access="nosetter.camelcase-underscore"
            unsaved-value="null">
      <generator class="guid.comb" />
    </id>
    <!--IUnique-->
    <property name="OrderIndex" access="readonly" not-null="true"/>

    <many-to-one name="Parent"
                 class="BudgetGroup"
                 not-null ="true"
                 foreign-key="FK_CustomShrinkage_BudgetGroup"/>

    <property name="ShrinkageName" type="string" not-null ="true" />
	<property name="IncludedInAllowance" not-null="true" />

	<set name="BudgetAbsenceCollection">
		  <key column="CustomShrinkage" foreign-key="FK_BudgetAbsenceCollection_CustomShrinkage"/>
		  <many-to-many column="Absence"
						class="Teleopti.Ccc.Domain.Scheduling.Absence"
						foreign-key="FK_BudgetAbsenceCollection_Absence"/>
	  </set>
  </class>
         
</hibernate-mapping>
