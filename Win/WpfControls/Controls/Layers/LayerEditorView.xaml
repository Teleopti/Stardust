<UserControl x:Class="Teleopti.Ccc.Win.WpfControls.Controls.Layers.LayerEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:GuiHelpers="clr-namespace:Teleopti.Ccc.WinCode.Common.GuiHelpers;assembly=Teleopti.Ccc.WinCode"
			 xmlns:controls="clr-namespace:Teleopti.Ccc.Win.WpfControls.Controls">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="..\..\Resources\CommonBrushes.xaml"/>
				<ResourceDictionary Source="..\..\Resources\DateTimeConverters.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<DockPanel>

		<StackPanel DockPanel.Dock="Left">
			<controls:AnalogPresenter  VerticalAlignment="Stretch" Height="50" Width="50"  Grid.Column="1" >
				<controls:AnalogPresenter.DataContext>
					<MultiBinding Converter="{StaticResource DateTimeToLocalConverter}">
						<MultiBinding.Bindings>
							<Binding Path="Period.StartDateTime"/>
							<Binding RelativeSource="{RelativeSource Self}" Path="(GuiHelpers:VisualTreeTimeZoneInfo.TimeZoneInfo)"/>
						</MultiBinding.Bindings>
					</MultiBinding>
				</controls:AnalogPresenter.DataContext>
			</controls:AnalogPresenter>
			<Label FontWeight="Bold">
				<Label.Content>
					<MultiBinding  Converter="{StaticResource DateTimeToTimeConverter}">
						<MultiBinding.Bindings>
							<Binding Path="Period.StartDateTime"/>
							<Binding RelativeSource="{RelativeSource Self}" Path="(GuiHelpers:VisualTreeTimeZoneInfo.TimeZoneInfo)"/>
						</MultiBinding.Bindings>
					</MultiBinding>
				</Label.Content>
			</Label>
		</StackPanel>

		<StackPanel DockPanel.Dock="Right">
			<controls:AnalogPresenter  VerticalAlignment="Stretch" Height="50" Width="50">
				<controls:AnalogPresenter.DataContext>
					<MultiBinding Converter="{StaticResource DateTimeToLocalConverter}">
						<MultiBinding.Bindings>
							<Binding Path="Period.EndDateTime"/>
							<Binding RelativeSource="{RelativeSource Self}" Path="(GuiHelpers:VisualTreeTimeZoneInfo.TimeZoneInfo)"/>
						</MultiBinding.Bindings>
					</MultiBinding>
				</controls:AnalogPresenter.DataContext>
			</controls:AnalogPresenter>
			<Label  FontWeight="Bold">
				<Label.Content>
					<MultiBinding  Converter="{StaticResource DateTimeToTimeConverter}">
						<MultiBinding.Bindings>
							<Binding Path="Period.EndDateTime"/>
							<Binding RelativeSource="{RelativeSource Self}" Path="(GuiHelpers:VisualTreeTimeZoneInfo.TimeZoneInfo)"/>
						</MultiBinding.Bindings>
					</MultiBinding>
				</Label.Content>
			</Label>

		</StackPanel>
		<StackPanel MinWidth="100" HorizontalAlignment="Center">
			<Label Content="{Binding Path=LayerDescription}"  HorizontalAlignment="Center"/>
			<Label Content="{Binding Path=Description}" FontWeight="Bold"  HorizontalAlignment="Center" FontSize="16"/>
		</StackPanel>
	</DockPanel>
</UserControl>
